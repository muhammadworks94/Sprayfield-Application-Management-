@model SAM.ViewModels.Account.SignupViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="login-page">
    <div class="login-wrapper">
        <!-- Left Promotional Panel -->
        <div class="login-promo-panel">
            <div class="login-promo-content">
                <div class="login-brand">
                    <div class="login-brand-badge">
                        <span class="login-brand-text">SAM</span>
                    </div>
                </div>

                <h2 class="login-promo-title">Join SAM Today</h2>
                <p class="login-promo-subtitle">Sprayfield Application Management</p>
                <p class="login-promo-description">
                    Get started with comprehensive sprayfield management tools.
                    Join an existing company or create your own to streamline operations,
                    monitor compliance, and generate reports all in one secure platform.
                </p>

                <div class="login-features">
                    <div class="login-feature-item">
                        <div class="login-feature-icon">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="login-feature-content">
                            <h4>Join Existing Company</h4>
                            @* <p>Request access to join your organization's account</p> *@
                        </div>
                    </div>
                    <div class="login-feature-item">
                        <div class="login-feature-icon">
                            <i class="bi bi-building-add"></i>
                        </div>
                        <div class="login-feature-content">
                            <h4>Create New Company</h4>
                            @* <p>Start your own company account and become the administrator</p> *@
                        </div>
                    </div>
                    <div class="login-feature-item">
                        <div class="login-feature-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <div class="login-feature-content">
                            <h4>Secure & Approved</h4>
                            @* <p>All requests are reviewed by administrators for security</p> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Signup Form Panel -->
        <div class="login-form-panel">
            <div class="login-form-container">
                <div class="login-form-header">
                    <h2>Create Account</h2>
                    <p class="login-form-subtitle">Choose how you want to get started</p>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Signup" method="post" class="login-form" id="signupForm">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Signup Type Selection -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">I want to:</label>
                        <div class="form-check mb-2">
                            <input type="radio" asp-for="SignupType" value="JoinExisting" class="form-check-input" id="joinExisting" checked />
                            <label class="form-check-label" for="joinExisting">
                                <i class="bi bi-building me-1"></i>Join an existing company
                            </label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="SignupType" value="CreateNew" class="form-check-input" id="createNew" />
                            <label class="form-check-label" for="createNew">
                                <i class="bi bi-building-add me-1"></i>Create a new company
                            </label>
                        </div>
                    </div>

                    <hr />

                    <!-- User Details (Always shown) -->
                    <h6 class="mb-3">Your Information</h6>
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">
                            <i class="bi bi-person me-2"></i>Full Name
                        </label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope me-2"></i>Email Address
                        </label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Join Existing Company Fields -->
                    <div id="joinExistingSection">
                        <hr />
                        <h6 class="mb-3">Company Selection</h6>
                        <div class="mb-3">
                            <label asp-for="SelectedCompanyId" class="form-label">
                                <i class="bi bi-building me-2"></i>Select Company
                            </label>
                            <select asp-for="SelectedCompanyId" asp-items="ViewBag.Companies" class="form-select">
                                <option value="">-- Select a company --</option>
                            </select>
                            <span asp-validation-for="SelectedCompanyId" class="text-danger"></span>
                            <small class="form-text text-muted">Your request will be sent to the company administrator for approval.</small>
                        </div>
                    </div>

                    <!-- Create New Company Fields -->
                    <div id="createNewSection" style="display: none;">
                        <hr />
                        <h6 class="mb-3">Company Information</h6>
                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label">
                                <i class="bi bi-building me-2"></i>Company Name
                            </label>
                            <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="bi bi-phone me-2"></i>Phone Number
                            </label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Website" class="form-label">
                                <i class="bi bi-globe me-2"></i>Website
                            </label>
                            <input asp-for="Website" type="url" class="form-control" placeholder="https://example.com" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="bi bi-file-text me-2"></i>Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Brief description of your company"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info mb-3">
                            <i class="bi bi-info-circle me-2"></i>
                            <small><strong>Note:</strong> If approved, you will become the company administrator and can invite other users.</small>
                        </div>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-send me-2"></i>Submit Request
                        </button>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p class="text-muted mb-0">
                        Already have an account? <a asp-action="Login" class="fw-bold">Sign in here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const joinExistingRadio = document.getElementById('joinExisting');
            const createNewRadio = document.getElementById('createNew');
            const joinSection = document.getElementById('joinExistingSection');
            const createSection = document.getElementById('createNewSection');

            function toggleSections() {
                if (joinExistingRadio.checked) {
                    joinSection.style.display = 'block';
                    createSection.style.display = 'none';
                    // Clear validation for create new fields
                    const companyNameField = document.getElementById('CompanyName');
                    const phoneField = document.getElementById('PhoneNumber');
                    const websiteField = document.getElementById('Website');
                    const descField = document.getElementById('Description');
                    if (companyNameField) companyNameField.value = '';
                    if (phoneField) phoneField.value = '';
                    if (websiteField) websiteField.value = '';
                    if (descField) descField.value = '';
                } else {
                    joinSection.style.display = 'none';
                    createSection.style.display = 'block';
                    // Clear validation for join existing fields
                    const selectedCompanyField = document.getElementById('SelectedCompanyId');
                    if (selectedCompanyField) selectedCompanyField.value = '';
                }
            }

            joinExistingRadio.addEventListener('change', toggleSections);
            createNewRadio.addEventListener('change', toggleSections);

            // Initialize on page load
            toggleSections();
        });
    </script>
</body>
</html>