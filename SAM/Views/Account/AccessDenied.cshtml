@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white text-center">
                    <h5 class="mb-0"><i class="bi bi-shield-x"></i> Access Denied</h5>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-shield-x" style="font-size: 4rem; color: var(--danger);"></i>
                    <p class="text-muted mt-3">You do not have permission to access this resource.</p>
                    <div class="mt-4">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house"></i> Go to Dashboard
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Go Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

