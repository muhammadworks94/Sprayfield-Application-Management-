@model SAM.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="mb-4">
    <p class="text-muted mb-0">Manage your account information and preferences</p>
</div>


<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Profile Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="Profile" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-section">
                <div class="form-section-title"><i class="bi bi-person me-2"></i>Profile Information</div>
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"><i class="bi bi-envelope me-1"></i>Email:</label>
                    <input asp-for="Email" class="form-control" readonly />
                    <small class="form-text text-muted">Email cannot be changed</small>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label required"><i class="bi bi-person me-1"></i>Full Name:</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.CompanyName))
                {
                    <div class="mb-3">
                        <label class="form-label"><i class="bi bi-briefcase me-1"></i>Company:</label>
                        <input type="text" class="form-control" value="@Model.CompanyName" readonly />
                        <small class="form-text text-muted">Company assignment cannot be changed</small>
                    </div>
                }
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update Profile
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

