@model SAM.ViewModels.UserManagement.UserManagementIndexViewModel
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Users";
    var currentUser = await UserManager.GetUserAsync(User);
    var canManageUsers = Model.CanManageUsers;
    var isGlobalAdmin = currentUser != null && await UserManager.IsInRoleAsync(currentUser, "admin");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Manage users in the system</p>
    </div>
</div>

@if (canManageUsers)
{
    <div class="card">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between mb-5">
                <h4 class="mb-0"> User List</h4>
                <div class="d-flex">
                    <div class="btn-group me-2" role="group" aria-label="View mode toggle">
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm active"
                                id="usersTableViewBtn">
                            <i class="bi bi-table"></i> Table
                        </button>
                        <button type="button"
                                class="btn btn-outline-secondary btn-sm"
                                id="usersCardViewBtn">
                            <i class="bi bi-grid-3x3-gap"></i> Cards
                        </button>
                    </div>
                    <a asp-action="UserCreate" asp-route-companyId="@Model.SelectedCompanyId" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle"></i> Add User
                    </a>
                </div>
            </div>
            @if (Model.Users.Any())
            {
                <div id="usersTableView" class="table-responsive">
                    <table class="table table-hover irrigates-table">
                        <thead>
                            <tr>
                                <th><i class="bi bi-person"></i> Full Name</th>
                                <th><i class="bi bi-envelope"></i> Email</th>
                                <th><i class="bi bi-briefcase"></i> Company</th>
                                <th><i class="bi bi-person-badge"></i> Role(s)</th>
                                <th><i class="bi bi-check-circle"></i> Status</th>
                                @if (isGlobalAdmin)
                                {
                                    <th><i class="bi bi-shield-check"></i> isSystemAdmin</th>
                                }
                                @if (canManageUsers)
                                {
                                    <th><i class="bi bi-shield"></i> isCompanyAdmin</th>
                                }
                                <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var userItem in Model.Users)
                            {
                                <tr data-user-id="@userItem.Id"
                                    data-company-id="@(userItem.CompanyId.HasValue ? userItem.CompanyId.ToString() : "")"
                                    data-company-name="@(userItem.CompanyName ?? "")">
                                    <td>
                                        <a asp-action="UserDetails" asp-route-id="@userItem.Id" class="text-decoration-none">
                                            @userItem.FullName
                                        </a>
                                    </td>
                                    <td>@userItem.Email</td>
                                    <td>@(userItem.CompanyName ?? "N/A")</td>
                                    <td>
                                        @foreach (var role in userItem.Roles)
                                        {
                                            <span class="badge bg-secondary me-1">@role.Replace("_", " ")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (userItem.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    @if (isGlobalAdmin)
                                    {
                                        var isAdminUser = userItem.Roles.Contains("admin");
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input mx-auto system-admin-toggle"
                                                       type="checkbox"
                                                       data-user-id="@userItem.Id"
                                                       @(isAdminUser ? "checked" : "")
                                                       @(currentUser != null && currentUser.Id == userItem.Id ? "disabled" : "") />
                                            </div>
                                        </td>
                                    }
                                    @if (canManageUsers)
                                    {
                                        var isCompanyAdminUser = userItem.Roles.Contains("company_admin");
                                        <td>
                                            <div class="form-check">
                                                <input class="form-check-input mx-auto company-admin-toggle"
                                                       type="checkbox"
                                                       data-user-id="@userItem.Id"
                                                       data-company-id="@(userItem.CompanyId.HasValue ? userItem.CompanyId.ToString() : "")"
                                                       data-company-name="@(userItem.CompanyName ?? "")"
                                                       @(isCompanyAdminUser ? "checked" : "")
                                                       @(currentUser != null && currentUser.Id == userItem.Id ? "disabled" : "") />
                                            </div>
                                        </td>
                                    }
                                    <td class="table-actions">
                                        @if (currentUser != null && currentUser.Id != userItem.Id)
                                        {
                                            <a asp-action="UserDetails" asp-route-id="@userItem.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a asp-action="UserEdit" asp-route-id="@userItem.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteUserModal"
                                                    data-user-id="@userItem.Id"
                                                    data-user-name="@userItem.FullName">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Current User</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div id="usersCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                    @foreach (var userItem in Model.Users)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header-light d-flex justify-content-between">
                                    <h6 class="mb-0">
                                        <a asp-action="UserDetails" asp-route-id="@userItem.Id" class="text-decoration-none">
                                            @userItem.FullName
                                        </a>
                                    </h6>
                                    @if (userItem.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <dl class="row small mb-3">
                                        <dt class="col-5"><i class="bi bi-envelope me-1"></i>Email</dt>
                                        <dd class="col-7 mb-1">@userItem.Email</dd>

                                        <dt class="col-5"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                        <dd class="col-7 mb-1">@(userItem.CompanyName ?? "N/A")</dd>

                                        <dt class="col-5"><i class="bi bi-person-badge me-1"></i>Role(s)</dt>
                                        <dd class="col-7 mb-1">
                                            @foreach (var role in userItem.Roles)
                                            {
                                                <span class="badge bg-secondary me-1">@role.Replace("_", " ")</span>
                                            }
                                        </dd>

                                        @if (canManageUsers)
                                        {
                                            var isCompanyAdminUser = userItem.Roles.Contains("company_admin");
                                            <dt class="col-5"><i class="bi bi-shield me-1"></i>isCompanyAdmin</dt>
                                            <dd class="col-7 mb-1">
                                                <div class="form-check form-switch mb-0">
                                                    <input class="form-check-input company-admin-toggle"
                                                           type="checkbox"
                                                           data-user-id="@userItem.Id"
                                                           data-company-id="@(userItem.CompanyId.HasValue ? userItem.CompanyId.ToString() : "")"
                                                           data-company-name="@(userItem.CompanyName ?? "")"
                                                           @(isCompanyAdminUser ? "checked" : "")
                                                           @(currentUser != null && currentUser.Id == userItem.Id ? "disabled" : "") />
                                                </div>
                                            </dd>
                                        }
                                    </dl>

                                    <div class="mt-auto d-flex justify-content-end">
                                        @if (currentUser != null && currentUser.Id != userItem.Id)
                                        {
                                            <a asp-action="UserDetails" asp-route-id="@userItem.Id" class="btn btn-sm btn-outline-secondary me-2">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a asp-action="UserEdit" asp-route-id="@userItem.Id" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteUserModal"
                                                    data-user-id="@userItem.Id"
                                                    data-user-name="@userItem.FullName">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Current User</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                    <p class="text-muted mt-3">No users found.</p>
                    <a asp-action="UserCreate" asp-route-companyId="@Model.SelectedCompanyId" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create First User
                    </a>
                </div>
            }
        </div>
    </div>
}

<!-- Delete User Modal -->
@if (canManageUsers)
{
    <div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete user <strong id="deleteUserName"></strong>? This action cannot be undone and will permanently remove the user from the system.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteUserForm" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@if (isGlobalAdmin)
{
    <!-- System Admin Toggle Confirmation Modal -->
    <div class="modal fade" id="systemAdminConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="systemAdminConfirmTitle"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="systemAdminConfirmBody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="systemAdminConfirmButton">Confirm</button>
                </div>
            </div>
        </div>
    </div>
}

@if (canManageUsers)
{
    <!-- Company Admin Toggle Confirmation Modal -->
    <div class="modal fade" id="companyAdminConfirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="companyAdminConfirmTitle"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="companyAdminConfirmBody">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="companyAdminConfirmButton">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Assign Company for Company Admin Modal -->
    <div class="modal fade" id="assignCompanyModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Assign Company for Company Admin</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="assignCompanyUserId" />
                    <div class="mb-3">
                        <label for="assignCompanySelect" class="form-label">Select Company</label>
                        <select id="assignCompanySelect" class="form-select">
                            <option value="">-- Select Company --</option>
                            @if (Model.Companies != null)
                            {
                                foreach (var company in Model.Companies)
                                {
                                    <option value="@company.Value">@company.Text</option>
                                }
                            }
                        </select>
                    </div>
                    <p class="small text-muted mb-0">
                        Select a company to assign before making this user a company admin.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="assignCompanyConfirmButton">Assign &amp; Set as Company Admin</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Users view mode toggle
            if (@(canManageUsers.ToString().ToLower()))
            {
                const usersTableBtn = document.getElementById('usersTableViewBtn');
                const usersCardBtn = document.getElementById('usersCardViewBtn');
                const usersTableView = document.getElementById('usersTableView');
                const usersCardView = document.getElementById('usersCardView');
                const usersStorageKey = 'usersViewMode';

                function setUsersViewMode(mode) {
                    const isTable = mode === 'table';
                    if (isTable) {
                        usersTableView?.classList.remove('d-none');
                        usersCardView?.classList.add('d-none');
                        usersTableBtn?.classList.add('active');
                        usersCardBtn?.classList.remove('active');
                    } else {
                        usersTableView?.classList.add('d-none');
                        usersCardView?.classList.remove('d-none');
                        usersTableBtn?.classList.remove('active');
                        usersCardBtn?.classList.add('active');
                    }
                    if (window.localStorage) {
                        localStorage.setItem(usersStorageKey, mode);
                    }
                }

                const savedUsersMode = window.localStorage ? localStorage.getItem(usersStorageKey) : null;
                setUsersViewMode(savedUsersMode === 'card' ? 'card' : 'table');

                usersTableBtn?.addEventListener('click', function () { setUsersViewMode('table'); });
                usersCardBtn?.addEventListener('click', function () { setUsersViewMode('card'); });

                // Delete user modal
                const deleteUserModal = document.getElementById('deleteUserModal');
                if (deleteUserModal) {
                    deleteUserModal.addEventListener('show.bs.modal', function (event) {
                        const button = event.relatedTarget;
                        if (!button) return;

                        const userId = button.getAttribute('data-user-id');
                        const userName = button.getAttribute('data-user-name');

                        const nameElement = deleteUserModal.querySelector('#deleteUserName');
                        if (nameElement) {
                            nameElement.textContent = userName;
                        }

                        const form = deleteUserModal.querySelector('#deleteUserForm');
                        if (form) {
                            const baseUrl = '@Url.Action("UserDelete", "UserManagement")';
                            form.action = baseUrl + '/' + userId;
                        }
                    });
                }

                // System admin toggle (super admin only)
                if (@(isGlobalAdmin.ToString().ToLower())) {
                    const adminToggles = document.querySelectorAll('.system-admin-toggle');
                    const systemAdminModalElement = document.getElementById('systemAdminConfirmModal');
                    let systemAdminModal = null;
                    let pendingUserId = null;
                    let pendingAction = null; // 'promote' | 'demote'

                    if (systemAdminModalElement && window.bootstrap) {
                        systemAdminModal = new bootstrap.Modal(systemAdminModalElement);
                    }

                    const titleElement = document.getElementById('systemAdminConfirmTitle');
                    const bodyElement = document.getElementById('systemAdminConfirmBody');
                    const confirmButton = document.getElementById('systemAdminConfirmButton');

                    adminToggles.forEach(function (checkbox) {
                        checkbox.addEventListener('change', function () {
                            if (!systemAdminModal) return;

                            const isChecked = checkbox.checked;
                            const userId = checkbox.getAttribute('data-user-id');
                            const row = checkbox.closest('tr');
                            const nameCell = row ? row.querySelector('td:first-child a, td:first-child') : null;
                            const userName = nameCell ? nameCell.textContent.trim() : 'this user';

                            if (!userId) return;

                            // Immediately revert checkbox; will be updated after successful action
                            checkbox.checked = !isChecked;

                            pendingUserId = userId;
                            pendingAction = isChecked ? 'promote' : 'demote';

                            if (pendingAction === 'promote') {
                                if (titleElement) titleElement.textContent = 'Promote to System Admin';
                                if (bodyElement) bodyElement.innerHTML = `Are you sure you want to promote <strong>${userName}</strong> to a system administrator?`;
                            } else {
                                if (titleElement) titleElement.textContent = 'Remove System Admin Role';
                                if (bodyElement) bodyElement.innerHTML = `Are you sure you want to remove the system administrator role from <strong>${userName}</strong>?`;
                            }

                            systemAdminModal.show();
                        });
                    });

                    if (confirmButton && systemAdminModalElement) {
                        confirmButton.addEventListener('click', function () {
                            if (!pendingUserId || !pendingAction) {
                                systemAdminModal.hide();
                                return;
                            }

                            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                            const token = tokenInput ? tokenInput.value : null;

                            const url = pendingAction === 'promote'
                                ? '@Url.Action("AdminPromote", "UserManagement")'
                                : '@Url.Action("AdminRemove", "UserManagement")';

                            const body = new URLSearchParams();
                            if (pendingAction === 'promote') {
                                body.append('userId', pendingUserId);
                            } else {
                                body.append('adminId', pendingUserId);
                            }

                            fetch(url, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/x-www-form-urlencoded',
                                    ...(token ? { 'RequestVerificationToken': token } : {})
                                },
                                body: body.toString()
                            })
                                .then(response => {
                                    if (!response.ok) {
                                        throw new Error('Request failed');
                                    }
                                    systemAdminModal.hide();
                                    // Reload to reflect updated roles / UI
                                    window.location.reload();
                                })
                                .catch(error => {
                                    console.error('Error updating system admin role:', error);
                                    systemAdminModal.hide();
                                });
                        });
                    }
                }

                // Company admin toggle (admins and company admins)
                const companyAdminModalElement = document.getElementById('companyAdminConfirmModal');
                let companyAdminModal = null;
                let pendingCompanyUserId = null;
                let pendingCompanyAction = null; // 'assign' | 'remove'

                if (companyAdminModalElement && window.bootstrap) {
                    companyAdminModal = new bootstrap.Modal(companyAdminModalElement);
                }

                const companyTitleElement = document.getElementById('companyAdminConfirmTitle');
                const companyBodyElement = document.getElementById('companyAdminConfirmBody');
                const companyConfirmButton = document.getElementById('companyAdminConfirmButton');

                // Assign company modal
                const assignCompanyModalElement = document.getElementById('assignCompanyModal');
                let assignCompanyModal = null;
                if (assignCompanyModalElement && window.bootstrap) {
                    assignCompanyModal = new bootstrap.Modal(assignCompanyModalElement);
                }
                const assignCompanyUserIdInput = document.getElementById('assignCompanyUserId');
                const assignCompanySelect = document.getElementById('assignCompanySelect');
                const assignCompanyConfirmButton = document.getElementById('assignCompanyConfirmButton');

                const companyToggles = document.querySelectorAll('.company-admin-toggle');

                companyToggles.forEach(function (checkbox) {
                    checkbox.addEventListener('change', function () {
                        const isChecked = checkbox.checked;
                        const userId = checkbox.getAttribute('data-user-id');
                        const row = checkbox.closest('tr') || checkbox.closest('.card');
                        const nameCell = row ? row.querySelector('td:first-child a, td:first-child, .card-header-light h6 a, .card-header-light h6') : null;
                        const userName = nameCell ? nameCell.textContent.trim() : 'this user';
                        const companyId = checkbox.getAttribute('data-company-id') || '';

                        if (!userId) return;

                        // Turning off: always go through existing confirm modal/endpoint
                        if (!isChecked) {
                            if (!companyAdminModal) return;

                            // Immediately revert checkbox; will be updated after successful action
                            checkbox.checked = !isChecked;

                            pendingCompanyUserId = userId;
                            pendingCompanyAction = 'remove';

                            if (companyTitleElement) companyTitleElement.textContent = 'Remove Company Admin Role';
                            if (companyBodyElement) companyBodyElement.innerHTML = `Are you sure you want to remove the company admin role from <strong>${userName}</strong>?`;

                            companyAdminModal.show();
                            return;
                        }

                        // Turning on:
                        if (companyId) {
                            // User already has a company: keep existing confirm behaviour
                            if (!companyAdminModal) return;

                            // Immediately revert checkbox; will be updated after successful action
                            checkbox.checked = !isChecked;

                            pendingCompanyUserId = userId;
                            pendingCompanyAction = 'assign';

                            if (companyTitleElement) companyTitleElement.textContent = 'Assign Company Admin Role';
                            if (companyBodyElement) companyBodyElement.innerHTML = `Are you sure you want to assign the company admin role to <strong>${userName}</strong>? This will remove other company-level roles (operator, technician).`;

                            companyAdminModal.show();
                        } else {
                            // User has no company: open assign-company modal instead
                            if (!assignCompanyModal || !assignCompanyUserIdInput || !assignCompanySelect) {
                                // Fallback: revert and do nothing
                                checkbox.checked = !isChecked;
                                return;
                            }

                            // Revert the checkbox until operation succeeds
                            checkbox.checked = !isChecked;

                            assignCompanyUserIdInput.value = userId;
                            assignCompanySelect.value = '';
                            assignCompanyModal.show();
                        }
                    });
                });

                if (companyConfirmButton && companyAdminModalElement) {
                    companyConfirmButton.addEventListener('click', function () {
                        if (!pendingCompanyUserId || !pendingCompanyAction) {
                            companyAdminModal.hide();
                            return;
                        }

                        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                        const token = tokenInput ? tokenInput.value : null;

                        const url = pendingCompanyAction === 'assign'
                            ? '@Url.Action("CompanyAdminAssign", "UserManagement")'
                            : '@Url.Action("CompanyAdminRemove", "UserManagement")';

                        const body = new URLSearchParams();
                        body.append('userId', pendingCompanyUserId);

                        fetch(url, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                ...(token ? { 'RequestVerificationToken': token } : {})
                            },
                            body: body.toString()
                        })
                            .then(response => {
                                if (!response.ok) {
                                    return response.text().then(text => {
                                        throw new Error(text || 'Request failed');
                                    });
                                }
                                companyAdminModal.hide();
                                window.location.reload();
                            })
                            .catch(error => {
                                console.error('Error updating company admin role:', error);
                                companyAdminModal.hide();
                            });
                    });
                }

                if (assignCompanyConfirmButton && assignCompanyModalElement) {
                    assignCompanyConfirmButton.addEventListener('click', function () {
                        if (!assignCompanyUserIdInput || !assignCompanySelect) return;

                        const userId = assignCompanyUserIdInput.value;
                        const companyId = assignCompanySelect.value;
                        if (!userId || !companyId) {
                            alert('Please select a company before assigning company admin role.');
                            return;
                        }

                        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                        const token = tokenInput ? tokenInput.value : null;

                        const url = '@Url.Action("CompanyAdminAssign", "UserManagement")';

                        const body = new URLSearchParams();
                        body.append('userId', userId);
                        body.append('companyId', companyId);

                        fetch(url, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                ...(token ? { 'RequestVerificationToken': token } : {})
                            },
                            body: body.toString()
                        })
                            .then(response => {
                                if (!response.ok) {
                                    return response.text().then(text => {
                                        throw new Error(text || 'Request failed');
                                    });
                                }
                                if (assignCompanyModal) {
                                    assignCompanyModal.hide();
                                }
                                window.location.reload();
                            })
                            .catch(error => {
                                console.error('Error assigning company and company admin role:', error);
                                alert(error.message || 'There was an error assigning the company. Please try again.');
                            });
                    });
                }
            }
        });
    </script>
}

