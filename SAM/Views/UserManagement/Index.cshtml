@model SAM.ViewModels.UserManagement.UserManagementIndexViewModel
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "User Management";
    var user = await UserManager.GetUserAsync(User);
    var canApprove = user != null && await UserManager.IsInRoleAsync(user, "admin");
    var canCreate = user != null && (await UserManager.IsInRoleAsync(user, "admin") ||
                                      await UserManager.IsInRoleAsync(user, "company_admin"));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Manage users and review user access requests</p>
    </div>
</div>

<!-- Bootstrap Tabs -->
<ul class="nav nav-tabs mb-4" id="userManagementTabs" role="tablist">
    @if (Model.IsGlobalAdmin)
    {
        <li class="nav-item" role="presentation">
            <button class="nav-link @(Model.ActiveTab == "users" ? "active" : "")"
                    id="users-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#users"
                    type="button"
                    role="tab"
                    aria-controls="users"
                    aria-selected="@(Model.ActiveTab == "users" ? "true" : "false")">
                <i class="bi bi-people me-1"></i>Users
            </button>
        </li>
    }
    <li class="nav-item" role="presentation">
        <button class="nav-link @(Model.ActiveTab == "requests" ? "active" : "")"
                id="requests-tab"
                data-bs-toggle="tab"
                data-bs-target="#requests"
                type="button"
                role="tab"
                aria-controls="requests"
                aria-selected="@(Model.ActiveTab == "requests" ? "true" : "false")">
            <i class="bi bi-person-plus me-1"></i>User Requests
        </button>
    </li>
</ul>

<!-- Tab Content -->
<div class="tab-content" id="userManagementTabContent">
    <!-- Users Tab -->
    @if (Model.IsGlobalAdmin)
    {
        <div class="tab-pane fade @(Model.ActiveTab == "users" ? "show active" : "")"
             id="users"
             role="tabpanel"
             aria-labelledby="users-tab">
            @* @if (Model.FilterViewModel != null)
            {
                @await Html.PartialAsync("Partials/_Filter", Model.FilterViewModel)
            } *@

            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-5">
                        <h4 class="mb-0"> User List</h4>
                        <div class="d-flex">
                            <div class="btn-group me-2" role="group" aria-label="View mode toggle">
                                <button type="button"
                                        class="btn btn-outline-secondary btn-sm active"
                                        id="usersTableViewBtn">
                                    <i class="bi bi-table"></i> Table
                                </button>
                                <button type="button"
                                        class="btn btn-outline-secondary btn-sm"
                                        id="usersCardViewBtn">
                                    <i class="bi bi-grid-3x3-gap"></i> Cards
                                </button>
                            </div>
                            <a asp-action="UserCreate" asp-route-companyId="@Model.SelectedCompanyId" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-circle"></i> Add User
                            </a>
                        </div>
                    </div>
                    @if (Model.Users.Any())
                    {
                        <div id="usersTableView" class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="bi bi-person"></i> Full Name</th>
                                        <th><i class="bi bi-envelope"></i> Email</th>
                                        <th><i class="bi bi-briefcase"></i> Company</th>
                                        <th><i class="bi bi-person-badge"></i> Role(s)</th>
                                        <th><i class="bi bi-check-circle"></i> Status</th>
                                        <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var userItem in Model.Users)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-action="UserDetails" asp-route-id="@userItem.Id" class="text-decoration-none">
                                                    <i class="bi bi-person me-1"></i>@userItem.FullName
                                                </a>
                                            </td>
                                            <td><i class="bi bi-envelope me-1"></i>@userItem.Email</td>
                                            <td><i class="bi bi-briefcase me-1"></i>@(userItem.CompanyName ?? "N/A")</td>
                                            <td>
                                                @foreach (var role in userItem.Roles)
                                                {
                                                    <span class="badge bg-secondary me-1">@role.Replace("_", " ")</span>
                                                }
                                            </td>
                                            <td>
                                                @if (userItem.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td class="table-actions">
                                                <a asp-action="UserDetails" asp-route-id="@userItem.Id" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a asp-action="UserEdit" asp-route-id="@userItem.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteUserModal"
                                                        data-user-id="@userItem.Id"
                                                        data-user-name="@userItem.FullName">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div id="usersCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                            @foreach (var userItem in Model.Users)
                            {
                                <div class="col">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-header-light d-flex justify-content-between">
                                            <h6 class="mb-0">
                                                <a asp-action="UserDetails" asp-route-id="@userItem.Id" class="text-decoration-none">
                                                    @userItem.FullName
                                                </a>
                                            </h6>
                                            @if (userItem.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <dl class="row small mb-3">
                                                <dt class="col-5"><i class="bi bi-envelope me-1"></i>Email</dt>
                                                <dd class="col-7 mb-1">@userItem.Email</dd>

                                                <dt class="col-5"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                                <dd class="col-7 mb-1">@(userItem.CompanyName ?? "N/A")</dd>

                                                <dt class="col-5"><i class="bi bi-person-badge me-1"></i>Role(s)</dt>
                                                <dd class="col-7 mb-1">
                                                    @foreach (var role in userItem.Roles)
                                                    {
                                                        <span class="badge bg-secondary me-1">@role.Replace("_", " ")</span>
                                                    }
                                                </dd>
                                            </dl>

                                            <div class="mt-auto d-flex justify-content-end">
                                                <a asp-action="UserDetails" asp-route-id="@userItem.Id" class="btn btn-sm btn-outline-secondary me-2">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                                <a asp-action="UserEdit" asp-route-id="@userItem.Id" class="btn btn-sm btn-outline-primary me-2">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteUserModal"
                                                        data-user-id="@userItem.Id"
                                                        data-user-name="@userItem.FullName">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                            <p class="text-muted mt-3">No users found.</p>
                            <a asp-action="UserCreate" asp-route-companyId="@Model.SelectedCompanyId" class="btn btn-primary mt-2">
                                <i class="bi bi-plus-circle"></i> Create First User
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    <!-- User Requests Tab -->
    <div class="tab-pane fade @(Model.ActiveTab == "requests" ? "show active" : "")"
         id="requests"
         role="tabpanel"
         aria-labelledby="requests-tab">


        @* @if (Model.FilterViewModel != null)
        {
            @await Html.PartialAsync("Partials/_Filter", Model.FilterViewModel)
        } *@

        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-5">
                    <h4 class="mb-0"> User Request List</h4>
                    <div class="d-flex">
                        <div class="btn-group me-2" role="group" aria-label="View mode toggle">
                            <button type="button"
                                    class="btn btn-outline-secondary btn-sm active"
                                    id="userRequestsTableViewBtn">
                                <i class="bi bi-table"></i> Table
                            </button>
                            <button type="button"
                                    class="btn btn-outline-secondary btn-sm"
                                    id="userRequestsCardViewBtn">
                                <i class="bi bi-grid-3x3-gap"></i> Cards
                            </button>
                        </div>
                        @if (canCreate)
                        {
                            <a asp-action="UserRequestCreate" asp-route-companyId="@Model.SelectedCompanyId" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-circle"></i> Add Request
                            </a>
                        }
                    </div>
                </div>
                @if (Model.UserRequests.Any())
                {
                    <div id="userRequestsTableView" class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><i class="bi bi-person"></i> Full Name</th>
                                    <th><i class="bi bi-envelope"></i> Email</th>
                                    <th><i class="bi bi-person-badge"></i> Role</th>
                                    <th><i class="bi bi-briefcase"></i> Company</th>
                                    <th><i class="bi bi-person-check"></i> Requested By</th>
                                    <th><i class="bi bi-info-circle"></i> Status</th>
                                    <th><i class="bi bi-calendar"></i> Created Date</th>
                                    @if (canApprove)
                                    {
                                        <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var request in Model.UserRequests)
                                {
                                    <tr>
                                        <td>@request.FullName</td>
                                        <td>@request.Email</td>
                                        <td>@request.AppRole.ToString().Replace("_", " ")</td>
                                        <td>@request.CompanyName</td>
                                        <td>@request.RequestedByEmail</td>
                                        <td>
                                            <span class="badge bg-@(request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending ? "warning" : "success")">
                                                @request.Status
                                            </span>
                                        </td>
                                        <td>@request.CreatedDate.ToString("MM/dd/yyyy")</td>
                                        @if (canApprove && request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending)
                                        {
                                            <td class="table-actions">
                                                <a asp-action="UserRequestApprove" asp-route-id="@request.Id" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-check-circle"></i> Approve
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#rejectUserRequestModal"
                                                        data-request-id="@request.Id"
                                                        data-request-name="@request.FullName">
                                                    <i class="bi bi-x-circle"></i> Reject
                                                </button>
                                            </td>
                                        }
                                        else if (canApprove)
                                        {
                                            <td class="table-actions">
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteUserRequestModal"
                                                        data-request-id="@request.Id"
                                                        data-request-name="@request.FullName">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div id="userRequestsCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                        @foreach (var request in Model.UserRequests)
                        {
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <h6 class="mb-0 card-header-light">@request.FullName</h6>
                                    <div class="card-body d-flex flex-column">
                                        <small class="text-muted d-block">
                                            <i class="bi bi-envelope me-1"></i>@request.Email
                                        </small>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-briefcase me-1"></i>@request.CompanyName
                                        </small>

                                        <dl class="row small mb-3 mt-2">
                                            <dt class="col-5"><i class="bi bi-person-badge me-1"></i>Role</dt>
                                            <dd class="col-7 mb-1">@request.AppRole.ToString().Replace("_", " ")</dd>

                                            <dt class="col-5"><i class="bi bi-person-check me-1"></i>Requested By</dt>
                                            <dd class="col-7 mb-1">@request.RequestedByEmail</dd>

                                            <dt class="col-5"><i class="bi bi-calendar me-1"></i>Created</dt>
                                            <dd class="col-7 mb-1">@request.CreatedDate.ToString("MM/dd/yyyy")</dd>

                                            <dt class="col-5"><i class="bi bi-info-circle me-1"></i>Status</dt>
                                            <dd class="col-7 mb-1">
                                                <span class="badge bg-@(request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending ? "warning" : "success")">
                                                    @request.Status
                                                </span>
                                            </dd>
                                        </dl>

                                        <div class="mt-auto d-flex justify-content-end">
                                            @if (canApprove && request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending)
                                            {
                                                <div class="btn-group">
                                                    <a asp-action="UserRequestApprove" asp-route-id="@request.Id" class="btn btn-sm btn-outline-success">
                                                        <i class="bi bi-check-circle"></i> Approve
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#rejectUserRequestModal"
                                                            data-request-id="@request.Id"
                                                            data-request-name="@request.FullName">
                                                        <i class="bi bi-x-circle"></i> Reject
                                                    </button>
                                                </div>
                                            }
                                            else if (canApprove)
                                            {
                                                <button type="button" class="btn btn-sm btn-outline-danger"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#deleteUserRequestModal"
                                                        data-request-id="@request.Id"
                                                        data-request-name="@request.FullName">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                        <p class="text-muted mt-3">No user requests found.</p>
                        @if (canCreate)
                        {
                            <a asp-action="UserRequestCreate" asp-route-companyId="@Model.SelectedCompanyId" class="btn btn-primary mt-2">
                                <i class="bi bi-plus-circle"></i> Create First Request
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Delete User Modal -->
@if (Model.IsGlobalAdmin)
{
    <div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete user <strong id="deleteUserName"></strong>? This action cannot be undone and will permanently remove the user from the system.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteUserForm" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<!-- Reject User Request Modal -->
<div class="modal fade" id="rejectUserRequestModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject User Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rejectUserRequestForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>Are you sure you want to reject the user request for <strong id="rejectUserName"></strong>?</p>
                    <div class="mb-3">
                        <label for="rejectUserReason" class="form-label">Reason (optional):</label>
                        <textarea name="reason" id="rejectUserReason" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Request</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete User Request Modal -->
<div class="modal fade" id="deleteUserRequestModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to permanently delete the user request for <strong id="deleteUserRequestName"></strong>? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteUserRequestForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Users tab view mode toggle
            @if (Model.IsGlobalAdmin)
            {
                        <text>
                        const usersTableBtn = document.getElementById('usersTableViewBtn');
                        const usersCardBtn = document.getElementById('usersCardViewBtn');
                        const usersTableView = document.getElementById('usersTableView');
                        const usersCardView = document.getElementById('usersCardView');
                        const usersStorageKey = 'usersViewMode';

                        function setUsersViewMode(mode) {
                            const isTable = mode === 'table';
                            if (isTable) {
                                usersTableView?.classList.remove('d-none');
                                usersCardView?.classList.add('d-none');
                                usersTableBtn?.classList.add('active');
                                usersCardBtn?.classList.remove('active');
                            } else {
                                usersTableView?.classList.add('d-none');
                                usersCardView?.classList.remove('d-none');
                                usersTableBtn?.classList.remove('active');
                                usersCardBtn?.classList.add('active');
                            }
                            if (window.localStorage) {
                                localStorage.setItem(usersStorageKey, mode);
                            }
                        }

                        const savedUsersMode = window.localStorage ? localStorage.getItem(usersStorageKey) : null;
                        setUsersViewMode(savedUsersMode === 'card' ? 'card' : 'table');

                        usersTableBtn?.addEventListener('click', function () { setUsersViewMode('table'); });
                        usersCardBtn?.addEventListener('click', function () { setUsersViewMode('card'); });

                        // Delete user modal
                        const deleteUserModal = document.getElementById('deleteUserModal');
                        if (deleteUserModal) {
                            deleteUserModal.addEventListener('show.bs.modal', function (event) {
                                const button = event.relatedTarget;
                                if (!button) return;

                                const userId = button.getAttribute('data-user-id');
                                const userName = button.getAttribute('data-user-name');

                                const nameElement = deleteUserModal.querySelector('#deleteUserName');
                                if (nameElement) {
                                    nameElement.textContent = userName;
                                }

                                const form = deleteUserModal.querySelector('#deleteUserForm');
                                if (form) {
                                    const baseUrl = '@Url.Action("UserDelete", "UserManagement")';
                                    form.action = baseUrl + '/' + userId;
                                }
                            });
                        }
                        </text>
            }

            // User Requests tab view mode toggle
            const requestsTableBtn = document.getElementById('userRequestsTableViewBtn');
            const requestsCardBtn = document.getElementById('userRequestsCardViewBtn');
            const requestsTableView = document.getElementById('userRequestsTableView');
            const requestsCardView = document.getElementById('userRequestsCardView');
            const requestsStorageKey = 'userRequestsViewMode';

            function setRequestsViewMode(mode) {
                const isTable = mode === 'table';
                if (isTable) {
                    requestsTableView?.classList.remove('d-none');
                    requestsCardView?.classList.add('d-none');
                    requestsTableBtn?.classList.add('active');
                    requestsCardBtn?.classList.remove('active');
                } else {
                    requestsTableView?.classList.add('d-none');
                    requestsCardView?.classList.remove('d-none');
                    requestsTableBtn?.classList.remove('active');
                    requestsCardBtn?.classList.add('active');
                }
                if (window.localStorage) {
                    localStorage.setItem(requestsStorageKey, mode);
                }
            }

            const savedRequestsMode = window.localStorage ? localStorage.getItem(requestsStorageKey) : null;
            setRequestsViewMode(savedRequestsMode === 'card' ? 'card' : 'table');

            requestsTableBtn?.addEventListener('click', function () { setRequestsViewMode('table'); });
            requestsCardBtn?.addEventListener('click', function () { setRequestsViewMode('card'); });

            // Reject user request modal
            const rejectModal = document.getElementById('rejectUserRequestModal');
            if (rejectModal) {
                rejectModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const requestId = button.getAttribute('data-request-id');
                    const requestName = button.getAttribute('data-request-name');

                    const nameElement = rejectModal.querySelector('#rejectUserName');
                    if (nameElement) {
                        nameElement.textContent = requestName;
                    }

                    const form = rejectModal.querySelector('#rejectUserRequestForm');
                    if (form) {
                        const baseUrl = '@Url.Action("UserRequestReject", "UserManagement")';
                        form.action = baseUrl + '/' + requestId;
                    }

                    // Clear reason textarea
                    const reasonTextarea = rejectModal.querySelector('#rejectUserReason');
                    if (reasonTextarea) {
                        reasonTextarea.value = '';
                    }
                });
            }

            // Delete user request modal
            const deleteRequestModal = document.getElementById('deleteUserRequestModal');
            if (deleteRequestModal) {
                deleteRequestModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    if (!button) return;

                    const requestId = button.getAttribute('data-request-id');
                    const requestName = button.getAttribute('data-request-name');

                    const nameElement = deleteRequestModal.querySelector('#deleteUserRequestName');
                    if (nameElement) {
                        nameElement.textContent = requestName;
                    }

                    const form = deleteRequestModal.querySelector('#deleteUserRequestForm');
                    if (form) {
                        const baseUrl = '@Url.Action("UserRequestDelete", "UserManagement")';
                        form.action = baseUrl + '/' + requestId;
                    }
                });
            }
        });
    </script>
}

