@model SAM.ViewModels.UserManagement.UserRequestCreateViewModel
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create User Request";
    var companies = ViewBag.Companies as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var roles = ViewBag.Roles as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var user = await UserManager.GetUserAsync(User);
    var isGlobalAdmin = user != null && await UserManager.IsInRoleAsync(user, "admin");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Submit a new user access request</p>
    </div>
    <a asp-action="UserRequests" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="alert alert-info">
    <i class="bi bi-info-circle"></i> Submit a request to add a new user to your company. The request will be reviewed by administrators.
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-info-circle"></i> User Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="UserRequestCreate" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-section">
                <div class="form-section-title"><i class="bi bi-person me-2"></i>User Information</div>
                
                <div class="mb-3">
                    <label asp-for="CompanyId" class="form-label required"></label>
                    @if (isGlobalAdmin && companies != null)
                    {
                        <select asp-for="CompanyId" asp-items="companies" class="form-select">
                            <option value="">-- Select Company --</option>
                        </select>
                    }
                    else
                    {
                        <input type="hidden" asp-for="CompanyId" />
                        <input type="text" class="form-control" value="@companies?.FirstOrDefault(c => c.Value == Model.CompanyId.ToString())?.Text" disabled />
                    }
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label required"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label required"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AppRole" class="form-label required"></label>
                    <select asp-for="AppRole" asp-items="roles" class="form-select"></select>
                    <span asp-validation-for="AppRole" class="text-danger"></span>
                    <small class="form-text text-muted">Select the role for the new user</small>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="UserRequests" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Submit Request
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

