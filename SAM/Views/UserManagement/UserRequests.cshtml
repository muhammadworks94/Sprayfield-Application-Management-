@model IEnumerable<SAM.ViewModels.UserManagement.UserRequestViewModel>
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "User Requests";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var companies = ViewBag.Companies as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
    var user = await UserManager.GetUserAsync(User);
    var canApprove = user != null && await UserManager.IsInRoleAsync(user, "admin");
    var canCreate = user != null && (await UserManager.IsInRoleAsync(user, "admin") || 
                                      await UserManager.IsInRoleAsync(user, "company_admin"));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Review and manage user access requests</p>
    </div>
    @if (canCreate)
    {
        <a asp-action="UserRequestCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Request
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (isGlobalAdmin && companies != null)
{
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="companyId" class="form-label"><i class="bi bi-building me-1"></i>Filter by Company:</label>
                    <select name="companyId" id="companyId" class="form-select" onchange="this.form.submit()">
                        <option value="">All Companies</option>
                        @foreach (var company in companies)
                        {
                            <option value="@company.Value" selected="@(selectedCompanyId.HasValue && selectedCompanyId.Value.ToString() == company.Value)">
                                @company.Text
                            </option>
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> User Request List</h5>
    </div>
    <div class="">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person"></i> Full Name</th>
                            <th><i class="bi bi-envelope"></i> Email</th>
                            <th><i class="bi bi-person-badge"></i> Role</th>
                            <th><i class="bi bi-briefcase"></i> Company</th>
                            <th><i class="bi bi-person-check"></i> Requested By</th>
                            <th><i class="bi bi-info-circle"></i> Status</th>
                            <th><i class="bi bi-calendar"></i> Created Date</th>
                            @if (canApprove)
                            {
                                <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.FullName</td>
                                <td>@request.Email</td>
                                <td>@request.AppRole.ToString().Replace("_", " ")</td>
                                <td>@request.CompanyName</td>
                                <td>@request.RequestedByEmail</td>
                                <td>
                                    <span class="badge bg-@(request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending ? "warning" : "success")">
                                        @request.Status
                                    </span>
                                </td>
                                <td>@request.CreatedDate.ToString("MM/dd/yyyy")</td>
                                @if (canApprove && request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending)
                                {
                                    <td class="table-actions">
                                        <a asp-action="UserRequestApprove" asp-route-id="@request.Id" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#rejectModal@request.Id">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                        
                                        <div class="modal fade" id="rejectModal@request.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Reject User Request</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <form asp-action="UserRequestReject" asp-route-id="@request.Id" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <div class="modal-body">
                                                            <div class="mb-3">
                                                                <label for="reason@request.Id" class="form-label">Reason (optional):</label>
                                                                <textarea name="reason" id="reason@request.Id" class="form-control" rows="3"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-danger">Reject Request</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                }
                                else if (canApprove)
                                {
                                    <td>-</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No user requests found.</p>
                @if (canCreate)
                {
                    <a asp-action="UserRequestCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create First Request
                    </a>
                }
            </div>
        }
    </div>
</div>

