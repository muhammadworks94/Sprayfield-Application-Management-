@model IEnumerable<SAM.ViewModels.UserManagement.AdminRequestViewModel>
@{
    ViewData["Title"] = "Admin Requests";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Review and manage administrator access requests</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <div class="btn-group me-2" role="group" aria-label="View mode toggle">
            <button type="button"
                    class="btn btn-outline-secondary active"
                    id="adminRequestsTableViewBtn">
                <i class="bi bi-table"></i> Table
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    id="adminRequestsCardViewBtn">
                <i class="bi bi-grid-3x3-gap"></i> Cards
            </button>
        </div>
        <a asp-action="AdminRequestCreate" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Request
        </a>
    </div>
</div>


<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Admin Request List</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div id="adminRequestsTableView" class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-tag"></i> Request Type</th>
                            <th><i class="bi bi-envelope"></i> Target Email</th>
                            <th><i class="bi bi-person"></i> Full Name</th>
                            <th><i class="bi bi-file-text"></i> Justification</th>
                            <th><i class="bi bi-person-check"></i> Requested By</th>
                            <th><i class="bi bi-flag"></i> Status</th>
                            <th><i class="bi bi-calendar"></i> Created Date</th>
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.RequestType.ToString().Replace("Admin", " Admin")</td>
                                <td>@request.TargetEmail</td>
                                <td>@request.TargetFullName</td>
                                <td>@(string.IsNullOrEmpty(request.Justification) ? "-" : (request.Justification.Length > 50 ? request.Justification.Substring(0, 50) + "..." : request.Justification))</td>
                                <td>@request.RequestedByEmail</td>
                                <td>
                                    <span class="badge badge-@(request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending ? "warning" : "success")">
                                        @request.Status
                                    </span>
                                </td>
                                <td>@request.CreatedDate.ToString("MM/dd/yyyy")</td>
                                <td class="table-actions">
                                    @if (request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending)
                                    {
                                        <a asp-action="AdminRequestApprove" asp-route-id="@request.Id" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#rejectAdminRequestModal"
                                                data-request-id="@request.Id"
                                                data-request-name="@request.TargetFullName">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="adminRequestsCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                @foreach (var request in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <h6 class="mb-0 card-header-light">@request.TargetFullName</h6>
                            <div class="card-body d-flex flex-column">
                                <small class="text-muted d-block">
                                    <i class="bi bi-envelope me-1"></i>@request.TargetEmail
                                </small>

                                <dl class="row small mb-3 mt-2">
                                    <dt class="col-5"><i class="bi bi-tag me-1"></i>Request Type</dt>
                                    <dd class="col-7 mb-1">@request.RequestType.ToString().Replace("Admin", " Admin")</dd>

                                    <dt class="col-5"><i class="bi bi-person-check me-1"></i>Requested By</dt>
                                    <dd class="col-7 mb-1">@request.RequestedByEmail</dd>

                                    <dt class="col-5"><i class="bi bi-calendar me-1"></i>Created</dt>
                                    <dd class="col-7 mb-1">@request.CreatedDate.ToString("MM/dd/yyyy")</dd>

                                    <dt class="col-5"><i class="bi bi-flag me-1"></i>Status</dt>
                                    <dd class="col-7 mb-1">
                                        <span class="badge badge-@(request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending ? "warning" : "success")">
                                            @request.Status
                                        </span>
                                    </dd>

                                    <dt class="col-12 mt-2"><i class="bi bi-file-text me-1"></i>Justification</dt>
                                    <dd class="col-12 mb-1">
                                        @(string.IsNullOrEmpty(request.Justification) ? "-" : request.Justification)
                                    </dd>
                                </dl>

                                <div class="mt-auto d-flex justify-content-end">
                                    @if (request.Status == SAM.Domain.Enums.RequestStatusEnum.Pending)
                                    {
                                        <div class="btn-group">
                                            <a asp-action="AdminRequestApprove" asp-route-id="@request.Id" class="btn btn-sm btn-outline-success">
                                                <i class="bi bi-check-circle"></i> Approve
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#rejectAdminRequestModal"
                                                    data-request-id="@request.Id"
                                                    data-request-name="@request.TargetFullName">
                                                <i class="bi bi-x-circle"></i> Reject
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No actions</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No admin requests found.</p>
                <a asp-action="AdminRequestCreate" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create First Request
                </a>
            </div>
        }
    </div>
</div>

<!-- Reject Admin Request Modal (Outside Table) -->
<div class="modal fade" id="rejectAdminRequestModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Admin Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rejectAdminRequestForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <p>Are you sure you want to reject the admin request for <strong id="rejectAdminName"></strong>?</p>
                    <div class="mb-3">
                        <label for="rejectAdminReason" class="form-label">Reason (optional):</label>
                        <textarea name="reason" id="rejectAdminReason" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Request</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const rejectModal = document.getElementById('rejectAdminRequestModal');
            if (rejectModal) {
                rejectModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const requestId = button.getAttribute('data-request-id');
                    const requestName = button.getAttribute('data-request-name');
                    
                    const nameElement = rejectModal.querySelector('#rejectAdminName');
                    if (nameElement) {
                        nameElement.textContent = requestName;
                    }
                    
                    const form = rejectModal.querySelector('#rejectAdminRequestForm');
                    if (form) {
                        const baseUrl = '@Url.Action("AdminRequestReject", "UserManagement")';
                        form.action = baseUrl + '/' + requestId;
                    }
                    
                    // Clear reason textarea
                    const reasonTextarea = rejectModal.querySelector('#rejectAdminReason');
                    if (reasonTextarea) {
                        reasonTextarea.value = '';
                    }
                });
            }

            const tableBtn = document.getElementById('adminRequestsTableViewBtn');
            const cardBtn = document.getElementById('adminRequestsCardViewBtn');
            const tableView = document.getElementById('adminRequestsTableView');
            const cardView = document.getElementById('adminRequestsCardView');
            const storageKey = 'adminRequestsViewMode';

            function setViewMode(mode) {
                const isTable = mode === 'table';

                if (isTable) {
                    tableView?.classList.remove('d-none');
                    cardView?.classList.add('d-none');
                    tableBtn?.classList.add('active');
                    cardBtn?.classList.remove('active');
                } else {
                    tableView?.classList.add('d-none');
                    cardView?.classList.remove('d-none');
                    tableBtn?.classList.remove('active');
                    cardBtn?.classList.add('active');
                }

                if (window.localStorage) {
                    localStorage.setItem(storageKey, mode);
                }
            }

            const savedMode = window.localStorage ? localStorage.getItem(storageKey) : null;
            setViewMode(savedMode === 'card' ? 'card' : 'table');

            tableBtn?.addEventListener('click', function () {
                setViewMode('table');
            });

            cardBtn?.addEventListener('click', function () {
                setViewMode('card');
            });
        });
    </script>
}
