@model SAM.ViewModels.UserManagement.AdminRequestApproveViewModel
@{
    ViewData["Title"] = "Approve Admin Request";
    var actionText = Model.RequestType == SAM.Domain.Enums.AdminRequestTypeEnum.CreateAdmin ? "create" : "disable";
}

<div class="mb-4">
    <p class="text-muted mb-0">Review and approve administrator access request</p>
</div>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle"></i> Approving this request will @actionText an admin account. This is a sensitive operation.
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Request Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Request Type:</dt>
            <dd class="col-sm-9">@Model.RequestType.ToString().Replace("Admin", " Admin")</dd>

            <dt class="col-sm-3">Target Email:</dt>
            <dd class="col-sm-9">@Model.TargetEmail</dd>

            @if (Model.RequestType == SAM.Domain.Enums.AdminRequestTypeEnum.CreateAdmin)
            {
                <dt class="col-sm-3">Full Name:</dt>
                <dd class="col-sm-9">@Model.TargetFullName</dd>
            }

            <dt class="col-sm-3">Justification:</dt>
            <dd class="col-sm-9">@Model.Justification</dd>

            <dt class="col-sm-3">Requested By:</dt>
            <dd class="col-sm-9">@Model.RequestedByEmail</dd>
        </dl>

        <form asp-action="AdminRequestApprove" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="AdminRequests" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Approve Request
                </button>
            </div>
        </form>
    </div>
</div>

