@model IEnumerable<SAM.ViewModels.SystemAdmin.SprayfieldViewModel>
@{
    ViewData["Title"] = "Sprayfields";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var companies = ViewBag.Companies as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Configure and manage sprayfield areas</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <div class="btn-group me-2" role="group" aria-label="View mode toggle">
            <button type="button"
                    class="btn btn-outline-secondary active"
                    id="sprayfieldsTableViewBtn">
                <i class="bi bi-table"></i> Table
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    id="sprayfieldsCardViewBtn">
                <i class="bi bi-grid-3x3-gap"></i> Cards
            </button>
        </div>
        <a asp-action="SprayfieldCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Sprayfield
        </a>
    </div>
</div>

@{
    var filterViewModel = ViewBag.FilterViewModel as SAM.ViewModels.Common.FilterViewModel;
}
@if (filterViewModel != null)
{
    @await Html.PartialAsync("Partials/_Filter", filterViewModel)
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Sprayfield List</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div id="sprayfieldsTableView" class="table-responsive">
                <table class="table table-hover irrigates-table">
                    <thead>
                        <tr>
                            <th><i class="bi bi-hash"></i> Field ID</th>
                            <th><i class="bi bi-rulers"></i> Size (acres)</th>
                            <th><i class="bi bi-droplet-half"></i> Hourly Rate (in/hr)</th>
                            <th><i class="bi bi-droplet"></i> Annual Rate (in/yr)</th>
                            <th><i class="bi bi-moisture"></i> Soil</th>
                            <th><i class="bi bi-flower1"></i> Crop</th>
                            <th><i class="bi bi-droplet"></i> Nozzle</th>
                            <th><i class="bi bi-building"></i> Facility</th>
                            @if (isGlobalAdmin)
                            {
                                <th><i class="bi bi-briefcase"></i> Company</th>
                            }
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sprayfield in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="SprayfieldDetails" asp-route-id="@sprayfield.Id">@sprayfield.FieldId</a>
                                </td>
                                <td>@sprayfield.SizeAcres.ToString("F2")</td>
                                <td>@(sprayfield.HourlyRateInches?.ToString("F2") ?? "-")</td>
                                <td>@(sprayfield.AnnualRateInches?.ToString("F2") ?? "-")</td>
                                <td>@sprayfield.SoilName</td>
                                <td>@sprayfield.CropName</td>
                                <td>@sprayfield.NozzleName</td>
                                <td>@(sprayfield.FacilityName ?? "-")</td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@sprayfield.CompanyName</td>
                                }
                                <td class="table-actions">
                                    <a asp-action="SprayfieldDetails" asp-route-id="@sprayfield.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-action="SprayfieldEdit" asp-route-id="@sprayfield.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteSprayfieldModal"
                                            data-sprayfield-id="@sprayfield.Id"
                                            data-sprayfield-name="@sprayfield.FieldId">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="sprayfieldsCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                @foreach (var sprayfield in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <h6 class="mb-0 card-header-light">
                                <a asp-action="SprayfieldDetails" asp-route-id="@sprayfield.Id" class="text-decoration-none">
                                    @sprayfield.FieldId
                                </a>
                            </h6>
                            <div class="card-body d-flex flex-column">

                                <dl class="row small mb-3">
                                    <dt class="col-6"><i class="bi bi-rulers me-1"></i>Size</dt>
                                    <dd class="col-6 mb-1">@sprayfield.SizeAcres.ToString("F2") acres</dd>

                                    <dt class="col-6"><i class="bi bi-droplet-half me-1"></i>Hourly Rate</dt>
                                    <dd class="col-6 mb-1">@((sprayfield.HourlyRateInches?.ToString("F2") ?? "-")) in/hr</dd>

                                    <dt class="col-6"><i class="bi bi-droplet me-1"></i>Annual Rate</dt>
                                    <dd class="col-6 mb-1">@((sprayfield.AnnualRateInches?.ToString("F2") ?? "-")) in/yr</dd>

                                    <dt class="col-6"><i class="bi bi-moisture me-1"></i>Soil</dt>
                                    <dd class="col-6 mb-1">@sprayfield.SoilName</dd>

                                    <dt class="col-6"><i class="bi bi-flower1 me-1"></i>Crop</dt>
                                    <dd class="col-6 mb-1">@sprayfield.CropName</dd>

                                    <dt class="col-6"><i class="bi bi-droplet me-1"></i>Nozzle</dt>
                                    <dd class="col-6 mb-1">@sprayfield.NozzleName</dd>

                                    <dt class="col-6"><i class="bi bi-building me-1"></i>Facility</dt>
                                    <dd class="col-6 mb-1">@((sprayfield.FacilityName ?? "-"))</dd>

                                    @if (isGlobalAdmin)
                                    {
                                        <dt class="col-6"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                        <dd class="col-6 mb-1">@sprayfield.CompanyName</dd>
                                    }
                                </dl>

                                <div class="mt-auto d-flex justify-content-end">
                                    <a asp-action="SprayfieldDetails" asp-route-id="@sprayfield.Id" class="btn btn-sm btn-outline-secondary me-2">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-action="SprayfieldEdit" asp-route-id="@sprayfield.Id" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteSprayfieldModal"
                                            data-sprayfield-id="@sprayfield.Id"
                                            data-sprayfield-name="@sprayfield.FieldId">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No sprayfields found.</p>
                <a asp-action="SprayfieldCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create First Sprayfield
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal (Outside Table) -->
<div class="modal fade" id="deleteSprayfieldModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete sprayfield <strong id="deleteSprayfieldName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteSprayfieldForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModal = document.getElementById('deleteSprayfieldModal');
            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function(event) {
                    const button = event.relatedTarget;
                    const sprayfieldId = button.getAttribute('data-sprayfield-id');
                    const sprayfieldName = button.getAttribute('data-sprayfield-name');
                    
                    const sprayfieldNameElement = deleteModal.querySelector('#deleteSprayfieldName');
                    if (sprayfieldNameElement) {
                        sprayfieldNameElement.textContent = sprayfieldName;
                    }
                    
                    const form = deleteModal.querySelector('#deleteSprayfieldForm');
                    if (form) {
                        const baseUrl = '@Url.Action("SprayfieldDelete", "SystemAdmin")';
                        form.action = baseUrl + '/' + sprayfieldId;
                    }
                });
            }

            const tableBtn = document.getElementById('sprayfieldsTableViewBtn');
            const cardBtn = document.getElementById('sprayfieldsCardViewBtn');
            const tableView = document.getElementById('sprayfieldsTableView');
            const cardView = document.getElementById('sprayfieldsCardView');
            const storageKey = 'sprayfieldsViewMode';

            function setViewMode(mode) {
                const isTable = mode === 'table';

                if (isTable) {
                    tableView?.classList.remove('d-none');
                    cardView?.classList.add('d-none');
                    tableBtn?.classList.add('active');
                    cardBtn?.classList.remove('active');
                } else {
                    tableView?.classList.add('d-none');
                    cardView?.classList.remove('d-none');
                    tableBtn?.classList.remove('active');
                    cardBtn?.classList.add('active');
                }

                if (window.localStorage) {
                    localStorage.setItem(storageKey, mode);
                }
            }

            const savedMode = window.localStorage ? localStorage.getItem(storageKey) : null;
            setViewMode(savedMode === 'card' ? 'card' : 'table');

            tableBtn?.addEventListener('click', function () {
                setViewMode('table');
            });

            cardBtn?.addEventListener('click', function () {
                setViewMode('card');
            });
        });
    </script>
}
