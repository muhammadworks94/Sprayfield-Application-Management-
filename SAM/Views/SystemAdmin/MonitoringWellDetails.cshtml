@model SAM.ViewModels.SystemAdmin.MonitoringWellViewModel
@using SAM.Domain.Enums
@{
    ViewData["Title"] = "Monitoring Well Details";
    var treatmentLocationText = Model.TreatmentSystemLocation switch
    {
        TreatmentSystemLocationEnum.Influent => "Influent (98)",
        TreatmentSystemLocationEnum.Effluent => "Effluent (99)",
        _ => (string?)null
    };
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">View detailed information for monitoring well</p>
    </div>
    <div>
        <a asp-action="MonitoringWellEdit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="SystemAdmin" asp-route-tab="monitoringwells" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@Model.WellId</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Company:</dt>
            <dd class="col-sm-9">@Model.CompanyName</dd>

            <dt class="col-sm-3">Well Identifier #:</dt>
            <dd class="col-sm-9">@Model.WellId</dd>

            <dt class="col-sm-3">Well Permit #:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.WellPermitNumber) ? "-" : Model.WellPermitNumber)</dd>

            <dt class="col-sm-3">Well Location:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.LocationDescription) ? "-" : Model.LocationDescription)</dd>

            <dt class="col-sm-3">Diameter (inches):</dt>
            <dd class="col-sm-9">@(Model.DiameterInches.HasValue ? Model.DiameterInches.Value.ToString("F2") : "-")</dd>

            <dt class="col-sm-3">Well Depth (feet):</dt>
            <dd class="col-sm-9">@(Model.WellDepthFeet.HasValue ? Model.WellDepthFeet.Value.ToString("F2") : "-")</dd>

            <dt class="col-sm-3">Depth to Screen (feet):</dt>
            <dd class="col-sm-9">@(Model.DepthToScreenFeet.HasValue ? Model.DepthToScreenFeet.Value.ToString("F2") : "-")</dd>

            <dt class="col-sm-3">Low Screen Depth (feet):</dt>
            <dd class="col-sm-9">@(Model.LowScreenDepthFeet.HasValue ? Model.LowScreenDepthFeet.Value.ToString("F2") : "-")</dd>

            <dt class="col-sm-3">High Screen Depth (feet):</dt>
            <dd class="col-sm-9">@(Model.HighScreenDepthFeet.HasValue ? Model.HighScreenDepthFeet.Value.ToString("F2") : "-")</dd>

            <dt class="col-sm-3">Top of Casing Elevation (msl):</dt>
            <dd class="col-sm-9">@(Model.TopOfCasingElevationMsl.HasValue ? Model.TopOfCasingElevationMsl.Value.ToString("F2") : "-")</dd>

            <dt class="col-sm-3">Location of Well in regards to Treatment System:</dt>
            <dd class="col-sm-9">@(treatmentLocationText ?? "-")</dd>

            <dt class="col-sm-3">No. of Wells to be Sampled:</dt>
            <dd class="col-sm-9">@(Model.NumberOfWellsToBeSampled.HasValue ? Model.NumberOfWellsToBeSampled.Value.ToString() : "-")</dd>

            <dt class="col-sm-3">Latitude:</dt>
            <dd class="col-sm-9">@(Model.Latitude.HasValue ? Model.Latitude.Value.ToString("F6") : "-")</dd>

            <dt class="col-sm-3">Longitude:</dt>
            <dd class="col-sm-9">@(Model.Longitude.HasValue ? Model.Longitude.Value.ToString("F6") : "-")</dd>
        </dl>
    </div>
</div>

