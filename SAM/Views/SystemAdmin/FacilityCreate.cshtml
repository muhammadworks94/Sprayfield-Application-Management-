@model SAM.ViewModels.SystemAdmin.FacilityCreateViewModel
@{
    ViewData["Title"] = "Create Facility";
}

<div class="mb-4">
    <p class="text-muted mb-0">Add a new facility to the system</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="FacilityCreate" method="post">
            @Html.AntiForgeryToken()

            @await Html.PartialAsync("Partials/_FacilityCreateFormPartial", Model)

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Facilities" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Facility
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

