@model SAM.ViewModels.SystemAdmin.SoilsPartialViewModel
@{
    var isGlobalAdmin = Model.IsGlobalAdmin;
    var companies = Model.Companies;
    var selectedCompanyId = Model.SelectedCompanyId;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Configure soil types and properties</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <div class="btn-group me-2" role="group" aria-label="View mode toggle">
            <button type="button"
                    class="btn btn-outline-secondary active"
                    id="soilsTableViewBtn">
                <i class="bi bi-table"></i> Table
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    id="soilsCardViewBtn">
                <i class="bi bi-grid-3x3-gap"></i> Cards
            </button>
        </div>
        <a asp-action="SoilCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Soil Type
        </a>
    </div>
</div>

@* @if (Model.Filter != null)
{
    @await Html.PartialAsync("Partials/_Filter", Model.Filter)
} *@

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Soil Types List</h5>
    </div>
    <div class="card-body">
        @if (Model.Soils.Any())
        {
            <div id="soilsTableView" class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-tag"></i> Type Name</th>
                            <th><i class="bi bi-file-text"></i> Description</th>
                            <th><i class="bi bi-speedometer"></i> Permeability (in/hr)</th>
                            @if (isGlobalAdmin)
                            {
                                <th><i class="bi bi-briefcase"></i> Company</th>
                            }
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var soil in Model.Soils)
                        {
                            <tr>
                                <td>@soil.TypeName</td>
                                <td>@(string.IsNullOrEmpty(soil.Description) ? "-" : soil.Description)</td>
                                <td>@soil.Permeability.ToString("F2")</td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@soil.CompanyName</td>
                                }
                                <td class="table-actions">
                                    <a asp-action="SoilEdit" asp-route-id="@soil.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteSoilModal"
                                            data-soil-id="@soil.Id"
                                            data-soil-name="@soil.TypeName">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="soilsCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                @foreach (var soil in Model.Soils)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <h6 class="mb-0 card-header-light">@soil.TypeName</h6>
                            <div class="card-body d-flex flex-column">
                                <small class="text-muted d-block mb-2">
                                    @(string.IsNullOrEmpty(soil.Description) ? "-" : soil.Description)
                                </small>

                                <dl class="row small mb-3">
                                    <dt class="col-6"><i class="bi bi-speedometer me-1"></i>Permeability</dt>
                                    <dd class="col-6 mb-1">@soil.Permeability.ToString("F2") in/hr</dd>

                                    @if (isGlobalAdmin)
                                    {
                                        <dt class="col-6"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                        <dd class="col-6 mb-1">@soil.CompanyName</dd>
                                    }
                                </dl>

                                <div class="mt-auto d-flex justify-content-end">
                                    <a asp-action="SoilEdit" asp-route-id="@soil.Id" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteSoilModal"
                                            data-soil-id="@soil.Id"
                                            data-soil-name="@soil.TypeName">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No soil types found.</p>
                <a asp-action="SoilCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create First Soil Type
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteSoilModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete soil type <strong id="deleteSoilName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteSoilForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const deleteModal = document.getElementById('deleteSoilModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const soilId = button.getAttribute('data-soil-id');
                const soilName = button.getAttribute('data-soil-name');
                
                const soilNameElement = deleteModal.querySelector('#deleteSoilName');
                if (soilNameElement) {
                    soilNameElement.textContent = soilName;
                }
                
                const form = deleteModal.querySelector('#deleteSoilForm');
                if (form) {
                    const baseUrl = '@Url.Action("SoilDelete", "SystemAdmin")';
                    form.action = baseUrl + '/' + soilId;
                }
            });
        }

        const tableBtn = document.getElementById('soilsTableViewBtn');
        const cardBtn = document.getElementById('soilsCardViewBtn');
        const tableView = document.getElementById('soilsTableView');
        const cardView = document.getElementById('soilsCardView');
        const storageKey = 'soilsViewMode';

        function setViewMode(mode) {
            const isTable = mode === 'table';

            if (isTable) {
                tableView?.classList.remove('d-none');
                cardView?.classList.add('d-none');
                tableBtn?.classList.add('active');
                cardBtn?.classList.remove('active');
            } else {
                tableView?.classList.add('d-none');
                cardView?.classList.remove('d-none');
                tableBtn?.classList.remove('active');
                cardBtn?.classList.add('active');
            }

            if (window.localStorage) {
                localStorage.setItem(storageKey, mode);
            }
        }

        const savedMode = window.localStorage ? localStorage.getItem(storageKey) : null;
        setViewMode(savedMode === 'card' ? 'card' : 'table');

        tableBtn?.addEventListener('click', function () {
            setViewMode('table');
        });

        cardBtn?.addEventListener('click', function () {
            setViewMode('card');
        });
    });
</script>

