        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="LabCertificationNumber2" class="form-label"></label>
                <input asp-for="LabCertificationNumber2" class="form-control" />
                <span asp-validation-for="LabCertificationNumber2" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="PersonsCollectingSamples" class="form-label"></label>
        <input asp-for="PersonsCollectingSamples" class="form-control" />
        <span asp-validation-for="PersonsCollectingSamples" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PermittedMinimumFreeboardFeet" class="form-label"></label>
        <div class="input-group">
            <input asp-for="PermittedMinimumFreeboardFeet" type="number" step="0.1" class="form-control" />
            <span class="input-group-text">ft</span>
        </div>
        <span asp-validation-for="PermittedMinimumFreeboardFeet" class="text-danger"></span>
    </div>
</div>


