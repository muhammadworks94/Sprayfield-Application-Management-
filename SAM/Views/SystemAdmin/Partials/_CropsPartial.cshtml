@model SAM.ViewModels.SystemAdmin.CropsPartialViewModel
@{
    var isGlobalAdmin = Model.IsGlobalAdmin;
    var companies = Model.Companies;
    var selectedCompanyId = Model.SelectedCompanyId;
}


@* @if (Model.Filter != null)
{
    @await Html.PartialAsync("Partials/_Filter", Model.Filter)
} *@

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-5">
            <h4 class="mb-0">Crops</h4>
            <div class="d-flex align-items-center gap-2">
                <div class="btn-group me-2" role="group" aria-label="View mode toggle">
                    <button type="button"
                            class="btn btn-outline-secondary btn-sm active"
                            id="cropsTableViewBtn">
                        <i class="bi bi-table"></i> Table
                    </button>
                    <button type="button"
                            class="btn btn-outline-secondary btn-sm"
                            id="cropsCardViewBtn">
                        <i class="bi bi-grid-3x3-gap"></i> Cards
                    </button>
                </div>
                <a asp-action="CropCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-circle"></i> Add Crop
                </a>
            </div>
        </div>
        @if (Model.Crops.Any())
        {
            <div id="cropsTableView" class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-flower1"></i> Crop Name</th>
                            <th><i class="bi bi-calculator"></i> PAN Factor</th>
                            <th><i class="bi bi-graph-up"></i> N Uptake (lbs/acre/year)</th>
                            @if (isGlobalAdmin)
                            {
                                <th><i class="bi bi-briefcase"></i> Company</th>
                            }
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var crop in Model.Crops)
                        {
                            <tr>
                                <td>@crop.Name</td>
                                <td>@crop.PanFactor.ToString("F2")</td>
                                <td>@crop.NUptake.ToString("F2")</td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@crop.CompanyName</td>
                                }
                                <td class="table-actions">
                                    <a asp-action="CropEdit" asp-route-id="@crop.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteCropModal"
                                            data-crop-id="@crop.Id"
                                            data-crop-name="@crop.Name">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="cropsCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                @foreach (var crop in Model.Crops)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header-light">
                                <h6 class="mb-0">@crop.Name</h6>
                            </div>
                            <div class="card-body d-flex flex-column">

                                <dl class="row small mb-3">
                                    <dt class="col-6"><i class="bi bi-calculator me-1"></i>PAN Factor</dt>
                                    <dd class="col-6 mb-1">@crop.PanFactor.ToString("F2")</dd>

                                    <dt class="col-6"><i class="bi bi-graph-up me-1"></i>N Uptake</dt>
                                    <dd class="col-6 mb-1">@crop.NUptake.ToString("F2") lbs/acre/year</dd>

                                    @if (isGlobalAdmin)
                                    {
                                        <dt class="col-6"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                        <dd class="col-6 mb-1">@crop.CompanyName</dd>
                                    }
                                </dl>

                                <div class="mt-auto d-flex justify-content-end">
                                    <a asp-action="CropEdit" asp-route-id="@crop.Id" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteCropModal"
                                            data-crop-id="@crop.Id"
                                            data-crop-name="@crop.Name">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No crops found.</p>
                <a asp-action="CropCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create First Crop
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteCropModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete crop <strong id="deleteCropName"></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteCropForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const deleteModal = document.getElementById('deleteCropModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function(event) {
                const button = event.relatedTarget;
                const cropId = button.getAttribute('data-crop-id');
                const cropName = button.getAttribute('data-crop-name');
                
                const cropNameElement = deleteModal.querySelector('#deleteCropName');
                if (cropNameElement) {
                    cropNameElement.textContent = cropName;
                }
                
                const form = deleteModal.querySelector('#deleteCropForm');
                if (form) {
                    const baseUrl = '@Url.Action("CropDelete", "SystemAdmin")';
                    form.action = baseUrl + '/' + cropId;
                }
            });
        }

        const tableBtn = document.getElementById('cropsTableViewBtn');
        const cardBtn = document.getElementById('cropsCardViewBtn');
        const tableView = document.getElementById('cropsTableView');
        const cardView = document.getElementById('cropsCardView');
        const storageKey = 'viewMode';

        function setViewMode(mode) {
            const isTable = mode === 'table';

            if (isTable) {
                tableView?.classList.remove('d-none');
                cardView?.classList.add('d-none');
                tableBtn?.classList.add('active');
                cardBtn?.classList.remove('active');
            } else {
                tableView?.classList.add('d-none');
                cardView?.classList.remove('d-none');
                tableBtn?.classList.remove('active');
                cardBtn?.classList.add('active');
            }

            if (window.localStorage) {
                localStorage.setItem(storageKey, mode);
            }
        }

        const savedMode = window.localStorage ? localStorage.getItem(storageKey) : null;
        setViewMode(savedMode === 'card' ? 'card' : 'table');

        tableBtn?.addEventListener('click', function () {
            setViewMode('table');
        });

        cardBtn?.addEventListener('click', function () {
            setViewMode('card');
        });
    });
</script>

