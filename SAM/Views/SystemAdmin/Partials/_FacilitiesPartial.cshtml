@model SAM.ViewModels.SystemAdmin.FacilitiesPartialViewModel
@{
    var isGlobalAdmin = Model.IsGlobalAdmin;
    var companies = Model.Companies;
    var selectedCompanyId = Model.SelectedCompanyId;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Manage facility information and configurations</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <div class="btn-group me-2" role="group" aria-label="View mode toggle">
            <button type="button"
                    class="btn btn-outline-secondary active"
                    id="facilitiesTableViewBtn">
                <i class="bi bi-table"></i> Table
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    id="facilitiesCardViewBtn">
                <i class="bi bi-grid-3x3-gap"></i> Cards
            </button>
        </div>
        <a asp-action="FacilityCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Facility
        </a>
    </div>
</div>
