@model SAM.ViewModels.SystemAdmin.CompanyDeleteViewModel
@{
    ViewData["Title"] = "Delete Company";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Confirm company deletion and review related data</p>
    </div>
    <a asp-action="Companies" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

@if (Model.TotalRelatedItems > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Warning: Related Data Will Be Affected</h5>
        <p class="mb-0">
            Deleting this company will affect <strong>@Model.TotalRelatedItems</strong> related item(s). 
            Please review the details below before confirming deletion.
        </p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else
{
    <div class="alert alert-info">
        <h5 class="alert-heading"><i class="bi bi-info-circle me-2"></i>No Related Data</h5>
        <p class="mb-0">This company has no related data. It can be safely deleted.</p>
    </div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-building me-2"></i>Company Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4"><i class="bi bi-building me-1"></i>Company Name:</dt>
                    <dd class="col-sm-8"><strong>@Model.Name</strong></dd>

                    <dt class="col-sm-4"><i class="bi bi-envelope me-1"></i>Contact Email:</dt>
                    <dd class="col-sm-8">@Model.ContactEmail</dd>

                    @if (!string.IsNullOrWhiteSpace(Model.PhoneNumber))
                    {
                        <dt class="col-sm-4"><i class="bi bi-telephone me-1"></i>Phone Number:</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Website))
                    {
                        <dt class="col-sm-4"><i class="bi bi-globe me-1"></i>Website:</dt>
                        <dd class="col-sm-8">@Model.Website</dd>
                    }

                    <dt class="col-sm-4"><i class="bi bi-calendar-plus me-1"></i>Created Date:</dt>
                    <dd class="col-sm-8">@Model.CreatedDate.ToString("MM/dd/yyyy HH:mm") UTC</dd>
                </dl>
            </div>
        </div>
    </div>

    @if (Model.TotalRelatedItems > 0)
    {
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Related Data That Will Be Affected</h5>
                </div>
                <div class="card-body">
                    @if (Model.UsersCount > 0)
                    {
                        <div class="border rounded p-3 bg-light mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-people me-2"></i>Users 
                                <span class="badge bg-danger">@Model.UsersCount</span>
                            </h6>
                            @if (Model.Users.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var user in Model.Users.Take(10))
                                    {
                                        <li class="mb-2">
                                            <i class="bi bi-person-circle me-2 text-muted"></i>
                                            <strong>@user.FullName</strong> (@user.Email)
                                        </li>
                                    }
                                    @if (Model.Users.Count > 10)
                                    {
                                        <li class="text-muted"><em>... and @(Model.Users.Count - 10) more</em></li>
                                    }
                                </ul>
                            }
                        </div>
                    }

                    @if (Model.UserRequestsCount > 0)
                    {
                        <div class="border rounded p-3 bg-light mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-person-plus me-2"></i>User Requests 
                                <span class="badge bg-warning">@Model.UserRequestsCount</span>
                            </h6>
                            @if (Model.UserRequests.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var request in Model.UserRequests.Take(10))
                                    {
                                        <li class="mb-2">
                                            <i class="bi bi-envelope me-2 text-muted"></i>
                                            <strong>@request.FullName</strong> (@request.Email)
                                            <span class="badge bg-secondary ms-2">@request.Status</span>
                                        </li>
                                    }
                                    @if (Model.UserRequests.Count > 10)
                                    {
                                        <li class="text-muted"><em>... and @(Model.UserRequests.Count - 10) more</em></li>
                                    }
                                </ul>
                            }
                        </div>
                    }

                    @if (Model.FacilitiesCount > 0)
                    {
                        <div class="border rounded p-3 bg-light mb-3">
                            <h6 class="text-primary mb-3">
                                <i class="bi bi-building me-2"></i>Facilities 
                                <span class="badge bg-danger">@Model.FacilitiesCount</span>
                            </h6>
                            @if (Model.Facilities.Any())
                            {
                                <ul class="list-unstyled mb-0">
                                    @foreach (var facility in Model.Facilities.Take(10))
                                    {
                                        <li class="mb-2">
                                            <i class="bi bi-geo-alt me-2 text-muted"></i>
                                            <strong>@facility.Name</strong>
                                            @if (!string.IsNullOrWhiteSpace(facility.PermitNumber))
                                            {
                                                <span class="text-muted">(@facility.PermitNumber)</span>
                                            }
                                        </li>
                                    }
                                    @if (Model.Facilities.Count > 10)
                                    {
                                        <li class="text-muted"><em>... and @(Model.Facilities.Count - 10) more</em></li>
                                    }
                                </ul>
                            }
                        </div>
                    }

                    <div class="border rounded p-3 bg-light">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-database me-2"></i>Reference Data
                        </h6>
                        <ul class="list-unstyled mb-0">
                            @if (Model.SoilsCount > 0)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-circle me-2 text-muted"></i>
                                    Soils: <span class="badge bg-danger">@Model.SoilsCount</span>
                                </li>
                            }
                            @if (Model.CropsCount > 0)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-circle me-2 text-muted"></i>
                                    Crops: <span class="badge bg-danger">@Model.CropsCount</span>
                                </li>
                            }
                            @if (Model.NozzlesCount > 0)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-circle me-2 text-muted"></i>
                                    Nozzles: <span class="badge bg-danger">@Model.NozzlesCount</span>
                                </li>
                            }
                            @if (Model.SprayfieldsCount > 0)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-circle me-2 text-muted"></i>
                                    Sprayfields: <span class="badge bg-danger">@Model.SprayfieldsCount</span>
                                </li>
                            }
                            @if (Model.MonitoringWellsCount > 0)
                            {
                                <li class="mb-2">
                                    <i class="bi bi-circle me-2 text-muted"></i>
                                    Monitoring Wells: <span class="badge bg-danger">@Model.MonitoringWellsCount</span>
                                </li>
                            }
                            @if (Model.SoilsCount == 0 && Model.CropsCount == 0 && Model.NozzlesCount == 0 && 
                                 Model.SprayfieldsCount == 0 && Model.MonitoringWellsCount == 0)
                            {
                                <li class="text-muted"><em>No reference data</em></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="card border-danger">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="text-danger mb-1"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion</h5>
                <p class="text-muted mb-0">This action cannot be undone. The company and all related data will be permanently deleted.</p>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Companies" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
                <form asp-action="CompanyDelete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Company
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

