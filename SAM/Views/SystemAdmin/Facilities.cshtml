@model IEnumerable<SAM.ViewModels.SystemAdmin.FacilityViewModel>
@{
    ViewData["Title"] = "Facilities";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var companies = ViewBag.Companies as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Manage facility information and configurations</p>
    </div>
    <a asp-action="FacilityCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Create New Facility
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (isGlobalAdmin && companies != null)
{
    <div class="card mb-3">
      
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="companyId" class="form-label"><i class="bi bi-building me-1"></i>Filter by Company:</label>
                    <select name="companyId" id="companyId" class="form-select" onchange="this.form.submit()">
                        <option value="">All Companies</option>
                        @foreach (var company in companies)
                        {
                            <option value="@company.Value" selected="@(selectedCompanyId.HasValue && selectedCompanyId.Value.ToString() == company.Value)">
                                @company.Text
                            </option>
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>
}

<div class="card card-primary">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Facility List</h5>
    </div>
    <div class="">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-building"></i> Facility Name</th>
                            <th><i class="bi bi-file-text"></i> Permit Number</th>
                            <th><i class="bi bi-person"></i> Permittee</th>
                            @if (isGlobalAdmin)
                            {
                                <th><i class="bi bi-briefcase"></i> Company</th>
                            }
                            <th><i class="bi bi-geo-alt"></i> City, State</th>
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var facility in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="FacilityDetails" asp-route-id="@facility.Id" class="text-decoration-none">
                                        <i class="bi bi-building me-1"></i>@facility.Name
                                    </a>
                                </td>
                                <td><i class="bi bi-file-text me-1"></i>@facility.PermitNumber</td>
                                <td><i class="bi bi-person me-1"></i>@facility.Permittee</td>
                                @if (isGlobalAdmin)
                                {
                                    <td><i class="bi bi-briefcase me-1"></i>@facility.CompanyName</td>
                                }
                                <td><i class="bi bi-geo-alt me-1"></i>@facility.City, @facility.State</td>
                                <td class="table-actions">
                                    <a asp-action="FacilityEdit" asp-route-id="@facility.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@facility.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                    
                                    <!-- Delete Confirmation Modal -->
                                    <div class="modal fade" id="deleteModal@facility.Id" tabindex="-1" aria-labelledby="deleteModalLabel@facility.Id" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel@facility.Id">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete facility <strong>@facility.Name</strong>? This action cannot be undone.
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="FacilityDelete" asp-route-id="@facility.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No facilities found.</p>
                <a asp-action="FacilityCreate" asp-route-companyId="@selectedCompanyId" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create First Facility
                </a>
            </div>
        }
    </div>
</div>

