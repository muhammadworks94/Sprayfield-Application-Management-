@model SAM.ViewModels.SystemAdmin.SprayfieldViewModel
@{
    ViewData["Title"] = "Sprayfield Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">View detailed information for sprayfield</p>
    </div>
    <div>
        <a asp-action="SprayfieldEdit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="SystemAdmin" asp-route-tab="sprayfields" asp-route-companyId="@Model.CompanyId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">@Model.FieldId</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Company:</dt>
            <dd class="col-sm-9">@Model.CompanyName</dd>

            <dt class="col-sm-3">Field ID:</dt>
            <dd class="col-sm-9">@Model.FieldId</dd>

            <dt class="col-sm-3">Size:</dt>
            <dd class="col-sm-9">@Model.SizeAcres.ToString("F2") acres</dd>

            <dt class="col-sm-3">Soil:</dt>
            <dd class="col-sm-9">@Model.SoilName</dd>

            <dt class="col-sm-3">Crop:</dt>
            <dd class="col-sm-9">@Model.CropName</dd>

            <dt class="col-sm-3">Nozzle:</dt>
            <dd class="col-sm-9">@Model.NozzleName</dd>

            <dt class="col-sm-3">Facility:</dt>
            <dd class="col-sm-9">@(Model.FacilityName ?? "-")</dd>

            <dt class="col-sm-3">Hydraulic Loading Limit:</dt>
            <dd class="col-sm-9">@Model.HydraulicLoadingLimitInPerYr.ToString("F2") inches/year</dd>
        </dl>
    </div>
</div>

