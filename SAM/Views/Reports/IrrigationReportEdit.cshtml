@model SAM.ViewModels.Reports.IrrRprtEditViewModel
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Edit Irrigation Report";
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var months = ViewBag.Months as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var complianceStatuses = ViewBag.ComplianceStatuses as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var user = await UserManager.GetUserAsync(User);
    var isGlobalAdmin = user != null && await UserManager.IsInRoleAsync(user, "admin");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Modify irrigation report information</p>
    </div>
    <a asp-action="IrrigationReportDetails" asp-route-id="@Model.Id" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Details
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Report Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="IrrigationReportEdit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-section">
                <div class="form-section-title"><i class="bi bi-file-text me-2"></i>Report Information</div>
                
                <div class="mb-3">
                    <label asp-for="FacilityId" class="form-label required"></label>
                    <select asp-for="FacilityId" asp-items="facilities" class="form-select">
                        <option value="">-- Select Facility --</option>
                    </select>
                    <span asp-validation-for="FacilityId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Month" class="form-label required"></label>
                            <select asp-for="Month" asp-items="months" class="form-select"></select>
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Year" class="form-label required"></label>
                            <input asp-for="Year" type="number" min="2000" max="2100" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title"><i class="bi bi-graph-up me-2"></i>Metrics</div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TotalVolumeApplied" class="form-label"></label>
                            <input asp-for="TotalVolumeApplied" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="TotalVolumeApplied" class="text-danger"></span>
                            <small class="form-text text-muted">Total volume in gallons</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TotalApplicationRate" class="form-label"></label>
                            <input asp-for="TotalApplicationRate" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="TotalApplicationRate" class="text-danger"></span>
                            <small class="form-text text-muted">Application rate in inches</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="HydraulicLoadingRate" class="form-label"></label>
                            <input asp-for="HydraulicLoadingRate" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="HydraulicLoadingRate" class="text-danger"></span>
                            <small class="form-text text-muted">Hydraulic loading rate in inches/year</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="NitrogenLoadingRate" class="form-label"></label>
                            <input asp-for="NitrogenLoadingRate" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="NitrogenLoadingRate" class="text-danger"></span>
                            <small class="form-text text-muted">Nitrogen loading rate in lbs/acre/year</small>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="PanUptakeRate" class="form-label"></label>
                            <input asp-for="PanUptakeRate" type="number" step="0.01" min="0" class="form-control" />
                            <span asp-validation-for="PanUptakeRate" class="text-danger"></span>
                            <small class="form-text text-muted">PAN uptake rate in lbs/acre/year</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ApplicationEfficiency" class="form-label"></label>
                            <input asp-for="ApplicationEfficiency" type="number" step="0.01" min="0" max="100" class="form-control" />
                            <span asp-validation-for="ApplicationEfficiency" class="text-danger"></span>
                            <small class="form-text text-muted">Application efficiency in percentage</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title"><i class="bi bi-file-text me-2"></i>Additional Information</div>
                
                <div class="mb-3">
                    <label asp-for="WeatherSummary" class="form-label"></label>
                    <input asp-for="WeatherSummary" class="form-control" />
                    <span asp-validation-for="WeatherSummary" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OperationalNotes" class="form-label"></label>
                    <textarea asp-for="OperationalNotes" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="OperationalNotes" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ComplianceStatus" class="form-label required"></label>
                    <select asp-for="ComplianceStatus" asp-items="complianceStatuses" class="form-select"></select>
                    <span asp-validation-for="ComplianceStatus" class="text-danger"></span>
                </div>
            </div>

            <input type="hidden" asp-for="CompanyId" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="IrrigationReportDetails" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update Report
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

