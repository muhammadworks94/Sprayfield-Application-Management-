@model SAM.ViewModels.Reports.IrrRprtViewModel
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Irrigation Report Details";
    var user = await UserManager.GetUserAsync(User);
    var canEdit = user != null && (await UserManager.IsInRoleAsync(user, "admin") || await UserManager.IsInRoleAsync(user, "company_admin"));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">View detailed irrigation report for @Model.Month @Model.Year</p>
    </div>
    <div>
        @if (canEdit)
        {
            <a asp-action="IrrigationReportEdit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
        }
        <a asp-action="IrrigationReports" asp-route-companyId="@Model.CompanyId" asp-route-facilityId="@Model.FacilityId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Report Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4"><i class="bi bi-briefcase me-1"></i>Company:</dt>
                    <dd class="col-sm-8">@Model.CompanyName</dd>

                    <dt class="col-sm-4"><i class="bi bi-building me-1"></i>Facility:</dt>
                    <dd class="col-sm-8">@Model.FacilityName</dd>

                    <dt class="col-sm-4"><i class="bi bi-calendar me-1"></i>Period:</dt>
                    <dd class="col-sm-8">@Model.Month @Model.Year</dd>

                    <dt class="col-sm-4"><i class="bi bi-water me-1"></i>Total Volume Applied:</dt>
                    <dd class="col-sm-8">@Model.TotalVolumeApplied.ToString("N2") gallons</dd>

                    <dt class="col-sm-4"><i class="bi bi-speedometer2 me-1"></i>Total Application Rate:</dt>
                    <dd class="col-sm-8">@Model.TotalApplicationRate.ToString("F2") inches</dd>

                    <dt class="col-sm-4"><i class="bi bi-graph-up me-1"></i>Hydraulic Loading Rate:</dt>
                    <dd class="col-sm-8">@Model.HydraulicLoadingRate.ToString("F2") inches/year</dd>

                    <dt class="col-sm-4"><i class="bi bi-arrow-up-circle me-1"></i>Nitrogen Loading Rate:</dt>
                    <dd class="col-sm-8">@Model.NitrogenLoadingRate.ToString("F2") lbs/acre/year</dd>

                    <dt class="col-sm-4"><i class="bi bi-arrow-down-circle me-1"></i>PAN Uptake Rate:</dt>
                    <dd class="col-sm-8">@Model.PanUptakeRate.ToString("F2") lbs/acre/year</dd>

                    <dt class="col-sm-4"><i class="bi bi-percent me-1"></i>Application Efficiency:</dt>
                    <dd class="col-sm-8">@Model.ApplicationEfficiency.ToString("F1")%</dd>

                    <dt class="col-sm-4"><i class="bi bi-cloud me-1"></i>Weather Summary:</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.WeatherSummary) ? "-" : Model.WeatherSummary)</dd>

                    <dt class="col-sm-4"><i class="bi bi-file-text me-1"></i>Operational Notes:</dt>
                    <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.OperationalNotes) ? "-" : Model.OperationalNotes)</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-shield-check"></i> Compliance Status</h5>
            </div>
            <div class="card-body text-center">
                @{
                    var statusClass = Model.ComplianceStatus == SAM.Domain.Enums.ComplianceStatusEnum.Compliant ? "compliant" :
                                     Model.ComplianceStatus == SAM.Domain.Enums.ComplianceStatusEnum.NonCompliant ? "non-compliant" : "under-review";
                    var statusIcon = Model.ComplianceStatus == SAM.Domain.Enums.ComplianceStatusEnum.Compliant ? "check-circle" :
                                   Model.ComplianceStatus == SAM.Domain.Enums.ComplianceStatusEnum.NonCompliant ? "x-circle" : "hourglass-split";
                }
                <div class="mb-3">
                    <i class="bi bi-@statusIcon" style="font-size: 4rem; color: var(--@statusClass);"></i>
                </div>
                <h4>
                    <span class="badge badge-@statusClass" style="font-size: 1.2rem; padding: 0.5rem 1rem;">
                        @Model.ComplianceStatus
                    </span>
                </h4>
                <p class="text-muted mt-3">
                    @if (Model.ComplianceStatus == SAM.Domain.Enums.ComplianceStatusEnum.Compliant)
                    {
                        <text>All parameters are within acceptable limits.</text>
                    }
                    else if (Model.ComplianceStatus == SAM.Domain.Enums.ComplianceStatusEnum.NonCompliant)
                    {
                        <text>One or more parameters exceed acceptable limits. Review required.</text>
                    }
                    else
                    {
                        <text>Parameters are close to limits. Review recommended.</text>
                    }
                </p>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Report Metadata</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5"><i class="bi bi-calendar-plus me-1"></i>Created:</dt>
                    <dd class="col-sm-7">@Model.CreatedDate.ToString("MM/dd/yyyy HH:mm") UTC</dd>

                    @if (Model.UpdatedDate.HasValue)
                    {
                        <dt class="col-sm-5"><i class="bi bi-calendar-check me-1"></i>Updated:</dt>
                        <dd class="col-sm-7">@Model.UpdatedDate.Value.ToString("MM/dd/yyyy HH:mm") UTC</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>

