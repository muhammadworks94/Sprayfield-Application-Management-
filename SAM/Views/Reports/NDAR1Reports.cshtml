@model IEnumerable<SAM.ViewModels.Reports.NDAR1ViewModel>
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "NDAR-1 Reports";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
    var selectedFacilityId = ViewBag.SelectedFacilityId as Guid?;
    var user = await UserManager.GetUserAsync(User);
    var canEdit = user != null && (await UserManager.IsInRoleAsync(user, "admin") || await UserManager.IsInRoleAsync(user, "company_admin"));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Generate and view Non-Discharge Application Reports (NDAR-1)</p>
    </div>
    
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            @if (isGlobalAdmin)
            {
                <div class="col-md-4">
                    <label for="companyId" class="form-label"><i class="bi bi-building me-1"></i>Company:</label>
                    <input type="hidden" name="companyId" value="@selectedCompanyId" />
                    <input type="text" class="form-control" value="@selectedCompanyId" disabled />
                </div>
            }
            <div class="col-md-4">
                <label for="facilityId" class="form-label"><i class="bi bi-building me-1"></i>Facility:</label>
                <select name="facilityId" id="facilityId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Facilities</option>
                    @if (facilities != null)
                    {
                        @foreach (var facility in facilities)
                        {
                            <option value="@facility.Value" selected="@(selectedFacilityId.HasValue && selectedFacilityId.Value.ToString() == facility.Value)">
                                @facility.Text
                            </option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h4 class="mb-0">NDAR-1 Reports</h4>
            <div class="d-flex">
                <div class="btn-group me-2" role="group" aria-label="View mode toggle">
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary active"
                            id="ndar1ReportsTableViewBtn">
                        <i class="bi bi-table"></i> Table
                    </button>
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary"
                            id="ndar1ReportsCardViewBtn">
                        <i class="bi bi-grid-3x3-gap"></i> Cards
                    </button>
                </div>
                @if (canEdit)
                {
                    <a asp-action="GenerateNDAR1Report" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle"></i> Generate New Report
                    </a>
                }
            </div>
        </div>
        @if (Model.Any())
        {
            <div id="ndar1ReportsTableView" class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-calendar"></i> Period</th>
                            <th><i class="bi bi-building"></i> Facility</th>
                            <th><i class="bi bi-check-circle"></i> Irrigation Occurred</th>
                            @if (isGlobalAdmin)
                            {
                                <th><i class="bi bi-briefcase"></i> Company</th>
                            }
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="NDAR1ReportDetails" asp-route-id="@report.Id">
                                        @report.Month @report.Year
                                    </a>
                                </td>
                                <td>@report.FacilityName</td>
                                <td>
                                    @if (report.DidIrrigationOccur)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@report.CompanyName</td>
                                }
                                <td class="table-actions">
                                    @* <a asp-action="NDAR1ReportDetails" asp-route-id="@report.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a> *@
                                    <a asp-action="ExportNDAR1Report" asp-route-id="@report.Id" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-download"></i> Export
                                    </a>
                                    @if (canEdit)
                                    {
                                        <a asp-action="NDAR1ReportEdit" asp-route-id="@report.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-outline-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#deleteNDAR1Modal"
                                                data-report-id="@report.Id"
                                                data-report-period="@($"{report.Month} {report.Year}")">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="ndar1ReportsCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                @foreach (var report in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header-light d-flex justify-content-between">
                                <div>
                                    <h6 class="mb-0">
                                        <a asp-action="NDAR1ReportDetails" asp-route-id="@report.Id">
                                            @report.Month @report.Year
                                        </a>
                                    </h6>
                                </div>
                                @if (report.DidIrrigationOccur)
                                {
                                    <span class="badge bg-success">Irrigation Occurred</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No Irrigation</span>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <dl class="row small mb-3">
                                    @if (isGlobalAdmin)
                                    {
                                        <dt class="col-6"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                        <dd class="col-6 mb-1">@report.CompanyName</dd>
                                    }
                                    <dt class="col-6"><i class="bi bi-building me-1"></i>Facility</dt>
                                    <dd class="col-6 mb-1">@report.FacilityName</dd>
                                </dl>

                                <div class="mt-auto d-flex justify-content-between">
                                    @* <a asp-action="NDAR1ReportDetails" asp-route-id="@report.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a> *@
                                    <a asp-action="ExportNDAR1Report" asp-route-id="@report.Id" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-download"></i> Export
                                    </a>
                                    @if (canEdit)
                                    {
                                        <div class="btn-group" role="group">
                                            <a asp-action="NDAR1ReportEdit" asp-route-id="@report.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteNDAR1Modal"
                                                    data-report-id="@report.Id"
                                                    data-report-period="@($"{report.Month} {report.Year}")">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No NDAR-1 reports found.</p>
                @if (canEdit)
                {
                    <a asp-action="GenerateNDAR1Report" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Generate First Report
                    </a>
                }
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteNDAR1Modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete NDAR-1 report for <strong id="deleteNDAR1Period"></strong>? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteNDAR1Form" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tableBtn = document.getElementById('ndar1ReportsTableViewBtn');
            const cardBtn = document.getElementById('ndar1ReportsCardViewBtn');
            const tableView = document.getElementById('ndar1ReportsTableView');
            const cardView = document.getElementById('ndar1ReportsCardView');
            const storageKey = 'ndar1ReportsViewMode';

            const deleteModal = document.getElementById('deleteNDAR1Modal');

            if (deleteModal) {
                deleteModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    if (!button) {
                        return;
                    }

                    const reportId = button.getAttribute('data-report-id');
                    const reportPeriod = button.getAttribute('data-report-period');

                    const periodElement = deleteModal.querySelector('#deleteNDAR1Period');
                    if (periodElement) {
                        periodElement.textContent = reportPeriod;
                    }

                    const form = deleteModal.querySelector('#deleteNDAR1Form');
                    if (form) {
                        const baseUrl = '@Url.Action("NDAR1ReportDelete", "Reports")';
                        form.action = baseUrl + '/' + reportId;
                    }
                });
            }

            function setViewMode(mode) {
                const isTable = mode === 'table';

                if (isTable) {
                    tableView?.classList.remove('d-none');
                    cardView?.classList.add('d-none');
                    tableBtn?.classList.add('active');
                    cardBtn?.classList.remove('active');
                } else {
                    tableView?.classList.add('d-none');
                    cardView?.classList.remove('d-none');
                    tableBtn?.classList.remove('active');
                    cardBtn?.classList.add('active');
                }

                if (window.localStorage) {
                    localStorage.setItem(storageKey, mode);
                }
            }

            const savedMode = window.localStorage ? localStorage.getItem(storageKey) : null;
            setViewMode(savedMode === 'card' ? 'card' : 'table');

            tableBtn?.addEventListener('click', function () {
                setViewMode('table');
            });

            cardBtn?.addEventListener('click', function () {
                setViewMode('card');
            });
        });
    </script>
}

