@model SAM.ViewModels.OperationalData.OperatorLogViewModel
@{
    ViewData["Title"] = "Operator Log Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">View detailed information for operator log</p>
    </div>
    <div>
        <a asp-action="OperatorLogEdit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="OperatorLogs" asp-route-companyId="@Model.CompanyId" asp-route-facilityId="@Model.FacilityId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Log Entry - @Model.LogDate.ToString("MM/dd/yyyy")</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Company:</dt>
            <dd class="col-sm-9">@Model.CompanyName</dd>

            <dt class="col-sm-3">Facility:</dt>
            <dd class="col-sm-9">@Model.FacilityName</dd>

            <dt class="col-sm-3">Log Date:</dt>
            <dd class="col-sm-9">@Model.LogDate.ToString("MM/dd/yyyy")</dd>

            <dt class="col-sm-3">Operator Name:</dt>
            <dd class="col-sm-9">@Model.OperatorName</dd>

            <dt class="col-sm-3">Arrival Time:</dt>
            <dd class="col-sm-9">@Model.ArrivalTime</dd>

            <dt class="col-sm-3">Time on Site (hours):</dt>
            <dd class="col-sm-9">@(Model.TimeOnSiteHours.HasValue ? Model.TimeOnSiteHours.Value.ToString("F2") : "N/A")</dd>

            <dt class="col-sm-3">Weather Conditions:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.WeatherConditions) ? "-" : Model.WeatherConditions)</dd>

            <dt class="col-sm-3">Maintenance Performed:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.MaintenancePerformed) ? "-" : Model.MaintenancePerformed)</dd>

            <dt class="col-sm-3">Equipment Inspected:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.EquipmentInspected) ? "-" : Model.EquipmentInspected)</dd>

            <dt class="col-sm-3">Issues Noted:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.IssuesNoted) ? "-" : Model.IssuesNoted)</dd>

            <dt class="col-sm-3">Corrective Actions:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.CorrectiveActions) ? "-" : Model.CorrectiveActions)</dd>

            <dt class="col-sm-3">Next Shift Notes:</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.NextShiftNotes) ? "-" : Model.NextShiftNotes)</dd>
        </dl>
    </div>
</div>

