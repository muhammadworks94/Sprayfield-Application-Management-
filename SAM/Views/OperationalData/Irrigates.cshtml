@model IEnumerable<SAM.ViewModels.OperationalData.IrrigateViewModel>
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Irrigation Logs";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var sprayfields = ViewBag.Sprayfields as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
    var selectedFacilityId = ViewBag.SelectedFacilityId as Guid?;
    var selectedSprayfieldId = ViewBag.SelectedSprayfieldId as Guid?;
    var user = await UserManager.GetUserAsync(User);
    var canEdit = user != null && (await UserManager.IsInRoleAsync(user, "admin") || await UserManager.IsInRoleAsync(user, "company_admin") || await UserManager.IsInRoleAsync(user, "operator"));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Track and manage irrigation activities</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <div class="btn-group me-2" role="group" aria-label="View mode toggle">
            <button type="button"
                    class="btn btn-outline-secondary active"
                    id="irrigatesTableViewBtn">
                <i class="bi bi-table"></i> Table
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    id="irrigatesCardViewBtn">
                <i class="bi bi-grid-3x3-gap"></i> Cards
            </button>
        </div>
        @if (canEdit)
        {
            <a asp-action="IrrigateCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Irrigation Log
            </a>
        }
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            @if (isGlobalAdmin)
            {
                <div class="col-md-3">
                    <label for="companyId" class="form-label"><i class="bi bi-building me-1"></i>Company:</label>
                    <input type="hidden" name="companyId" value="@selectedCompanyId" />
                    <input type="text" class="form-control" value="@selectedCompanyId" disabled />
                </div>
            }
            <div class="col-md-3">
                <label for="facilityId" class="form-label"><i class="bi bi-building me-1"></i>Facility:</label>
                <select name="facilityId" id="facilityId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Facilities</option>
                    @if (facilities != null)
                    {
                        @foreach (var facility in facilities)
                        {
                            <option value="@facility.Value" selected="@(selectedFacilityId.HasValue && selectedFacilityId.Value.ToString() == facility.Value)">
                                @facility.Text
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="sprayfieldId" class="form-label"><i class="bi bi-grid-3x3-gap me-1"></i>Sprayfield:</label>
                <select name="sprayfieldId" id="sprayfieldId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Sprayfields</option>
                    @if (sprayfields != null)
                    {
                        @foreach (var sprayfield in sprayfields)
                        {
                            <option value="@sprayfield.Value" selected="@(selectedSprayfieldId.HasValue && selectedSprayfieldId.Value.ToString() == sprayfield.Value)">
                                @sprayfield.Text
                            </option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Irrigation Log List</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div id="irrigatesTableView" class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>
                                <div class="d-flex flex-column">
                                    <span><i class="bi bi-calendar me-1"></i>Date</span>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex flex-column">
                                    <span><i class="bi bi-building me-1"></i>Facility</span>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex flex-column">
                                    <span><i class="bi bi-grid-3x3-gap me-1"></i>Sprayfield</span>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex flex-column">
                                    <span><i class="bi bi-clock me-1"></i>Time</span>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex flex-column">
                                    <span><i class="bi bi-hourglass me-1"></i>Duration</span>
                                    <small class="text-muted">hrs</small>
                                </div>
                            </th>
                            <th class="text-end">
                                <div class="d-flex flex-column text-end">
                                    <span><i class="bi bi-water me-1"></i>Volume</span>
                                    <small class="text-muted">(gal)</small>
                                </div>
                            </th>
                            <th class="text-end">
                                <div class="d-flex flex-column text-end">
                                    <span><i class="bi bi-speedometer2 me-1"></i>Flow Rate</span>
                                    <small class="text-muted">(gpm)</small>
                                </div>
                            </th>
                            <th>
                                <div class="d-flex flex-column">
                                    <span><i class="bi bi-person me-1"></i>Operator</span>
                                </div>
                            </th>
                            @if (isGlobalAdmin)
                            {
                                <th>
                                    <div class="d-flex flex-column">
                                        <span><i class="bi bi-briefcase me-1"></i>Company</span>
                                    </div>
                                </th>
                            }
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var irrigate in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="IrrigateDetails" asp-route-id="@irrigate.Id">
                                        @irrigate.IrrigationDate.ToString("MM/dd/yyyy")
                                    </a>
                                </td>
                                <td>@irrigate.FacilityName</td>
                                <td>@irrigate.SprayfieldName</td>
                                <td>@irrigate.StartTime - @irrigate.EndTime</td>
                                <td>@(irrigate.DurationHours?.ToString("F2") ?? "N/A") hrs</td>
                                <td class="text-end">@(irrigate.TotalVolumeGallons?.ToString("N0") ?? "N/A")</td>
                                <td class="text-end">@(irrigate.FlowRateGpm?.ToString("F2") ?? "N/A")</td>
                                <td>@irrigate.Operator</td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@irrigate.CompanyName</td>
                                }
                                <td class="table-actions">
                                    <a asp-action="IrrigateDetails" asp-route-id="@irrigate.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (canEdit)
                                    {
                                        <a asp-action="IrrigateEdit" asp-route-id="@irrigate.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(irrigate.Id.ToString().Replace("-", ""))">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>

                                        <div class="modal fade" id="deleteModal@(irrigate.Id.ToString().Replace("-", ""))" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this irrigation log?</p>
                                                        <p class="text-muted small">
                                                            Date: @irrigate.IrrigationDate.ToString("MM/dd/yyyy")<br />
                                                            Facility: @irrigate.FacilityName<br />
                                                            Sprayfield: @irrigate.SprayfieldName
                                                        </p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="IrrigateDelete" asp-route-id="@irrigate.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="irrigatesCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                @foreach (var irrigate in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header-light ">
                                <div class="d-flex justify-content-between ">
                                    <h6 class="mb-0">
                                        <a asp-action="IrrigateDetails" asp-route-id="@irrigate.Id">
                                            @irrigate.IrrigationDate.ToString("MM/dd/yyyy")
                                        </a>
                                    </h6>
                                    <small class="text-muted d-block">
                                        <i class="bi bi-building me-1"></i>@irrigate.FacilityName
                                    </small>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">

                                <dl class="row small mb-3">
                                    <dt class="col-6"><i class="bi bi-grid-3x3-gap me-1"></i>Sprayfield Name</dt>
                                    <dd class="col-6 mb-1">@irrigate.SprayfieldName</dd>

                                    <dt class="col-6"><i class="bi bi-clock me-1"></i>Time</dt>
                                    <dd class="col-6 mb-1">@irrigate.StartTime - @irrigate.EndTime</dd>

                                    <dt class="col-6"><i class="bi bi-hourglass me-1"></i>Duration</dt>
                                    <dd class="col-6 mb-1">@((irrigate.DurationHours?.ToString("F2") ?? "N/A")) hrs</dd>

                                    <dt class="col-6"><i class="bi bi-water me-1"></i>Volume</dt>
                                    <dd class="col-6 mb-1">@((irrigate.TotalVolumeGallons?.ToString("N0") ?? "N/A")) gal</dd>

                                    <dt class="col-6"><i class="bi bi-speedometer2 me-1"></i>Flow Rate</dt>
                                    <dd class="col-6 mb-1">@((irrigate.FlowRateGpm?.ToString("F2") ?? "N/A")) gpm</dd>

                                    <dt class="col-6"><i class="bi bi-person me-1"></i>Operator</dt>
                                    <dd class="col-6 mb-1">@irrigate.Operator</dd>

                                    @if (isGlobalAdmin)
                                    {
                                        <dt class="col-6"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                        <dd class="col-6 mb-1">@irrigate.CompanyName</dd>
                                    }
                                </dl>

                                <div class="mt-auto d-flex justify-content-between">
                                    <a asp-action="IrrigateDetails" asp-route-id="@irrigate.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (canEdit)
                                    {
                                        <div class="btn-group">
                                            <a asp-action="IrrigateEdit" asp-route-id="@irrigate.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(irrigate.Id.ToString().Replace("-", ""))">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No irrigation logs found.</p>
                @if (canEdit)
                {
                    <a asp-action="IrrigateCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create First Irrigation Log
                    </a>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tableBtn = document.getElementById('irrigatesTableViewBtn');
            const cardBtn = document.getElementById('irrigatesCardViewBtn');
            const tableView = document.getElementById('irrigatesTableView');
            const cardView = document.getElementById('irrigatesCardView');
            const storageKey = 'irrigatesViewMode';

            function setViewMode(mode) {
                const isTable = mode === 'table';

                if (isTable) {
                    tableView?.classList.remove('d-none');
                    cardView?.classList.add('d-none');
                    tableBtn?.classList.add('active');
                    cardBtn?.classList.remove('active');
                } else {
                    tableView?.classList.add('d-none');
                    cardView?.classList.remove('d-none');
                    tableBtn?.classList.remove('active');
                    cardBtn?.classList.add('active');
                }

                if (window.localStorage) {
                    localStorage.setItem(storageKey, mode);
                }
            }

            const savedMode = window.localStorage ? localStorage.getItem(storageKey) : null;
            setViewMode(savedMode === 'card' ? 'card' : 'table');

            tableBtn?.addEventListener('click', function () {
                setViewMode('table');
            });

            cardBtn?.addEventListener('click', function () {
                setViewMode('card');
            });
        });
    </script>
}
