@model IEnumerable<SAM.ViewModels.OperationalData.GWMonitViewModel>
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Groundwater Monitoring";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var monitoringWells = ViewBag.MonitoringWells as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
    var selectedFacilityId = ViewBag.SelectedFacilityId as Guid?;
    var selectedMonitoringWellId = ViewBag.SelectedMonitoringWellId as Guid?;
    var user = await UserManager.GetUserAsync(User);
    var canEdit = user != null && (await UserManager.IsInRoleAsync(user, "admin") || await UserManager.IsInRoleAsync(user, "company_admin") || await UserManager.IsInRoleAsync(user, "technician"));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Manage groundwater monitoring data and records</p>
    </div>
    @if (canEdit)
    {
        <a asp-action="GWMonitCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Record
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            @if (isGlobalAdmin)
            {
                <div class="col-md-3">
                    <label for="companyId" class="form-label"><i class="bi bi-building me-1"></i>Company:</label>
                    <input type="hidden" name="companyId" value="@selectedCompanyId" />
                    <input type="text" class="form-control" value="@selectedCompanyId" disabled />
                </div>
            }
            <div class="col-md-3">
                <label for="facilityId" class="form-label"><i class="bi bi-building me-1"></i>Facility:</label>
                <select name="facilityId" id="facilityId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Facilities</option>
                    @if (facilities != null)
                    {
                        @foreach (var facility in facilities)
                        {
                            <option value="@facility.Value" selected="@(selectedFacilityId.HasValue && selectedFacilityId.Value.ToString() == facility.Value)">
                                @facility.Text
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="monitoringWellId" class="form-label"><i class="bi bi-droplet-half me-1"></i>Monitoring Well:</label>
                <select name="monitoringWellId" id="monitoringWellId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Wells</option>
                    @if (monitoringWells != null)
                    {
                        @foreach (var well in monitoringWells)
                        {
                            <option value="@well.Value" selected="@(selectedMonitoringWellId.HasValue && selectedMonitoringWellId.Value.ToString() == well.Value)">
                                @well.Text
                            </option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Groundwater Monitoring List</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-calendar"></i> Sample Date</th>
                            <th><i class="bi bi-building"></i> Facility</th>
                            <th><i class="bi bi-droplet-half"></i> Well ID</th>
                            <th><i class="bi bi-rulers"></i> Sample Depth</th>
                            <th><i class="bi bi-water"></i> Water Level</th>
                            <th><i class="bi bi-thermometer"></i> pH</th>
                            <th><i class="bi bi-thermometer-half"></i> Temperature</th>
                            <th><i class="bi bi-lightning"></i> Conductivity</th>
                            @if (isGlobalAdmin)
                            {
                                <th><i class="bi bi-briefcase"></i> Company</th>
                            }
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gwMonit in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="GWMonitDetails" asp-route-id="@gwMonit.Id">
                                        @gwMonit.SampleDate.ToString("MM/dd/yyyy")
                                    </a>
                                </td>
                                <td>@gwMonit.FacilityName</td>
                                <td>@gwMonit.MonitoringWellName</td>
                                <td>@(gwMonit.SampleDepth?.ToString("F2") ?? "N/A")</td>
                                <td>@(gwMonit.WaterLevel?.ToString("F2") ?? "N/A")</td>
                                <td>@(gwMonit.PH?.ToString("F2") ?? "N/A")</td>
                                <td>@(gwMonit.Temperature?.ToString("F1") ?? "N/A")</td>
                                <td>@(gwMonit.Conductivity?.ToString("F2") ?? "N/A")</td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@gwMonit.CompanyName</td>
                                }
                                <td class="table-actions">
                                    <a asp-action="GWMonitDetails" asp-route-id="@gwMonit.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (canEdit)
                                    {
                                        <a asp-action="GWMonitEdit" asp-route-id="@gwMonit.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@gwMonit.Id">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                        
                                        <div class="modal fade" id="deleteModal@gwMonit.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this groundwater monitoring record?</p>
                                                        <p class="text-muted small">Date: @gwMonit.SampleDate.ToString("MM/dd/yyyy")<br />
                                                        Facility: @gwMonit.FacilityName<br />
                                                        Well: @gwMonit.MonitoringWellName</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="GWMonitDelete" asp-route-id="@gwMonit.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No groundwater monitoring records found.</p>
                @if (canEdit)
                {
                    <a asp-action="GWMonitCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create First Record
                    </a>
                }
            </div>
        }
    </div>
</div>

