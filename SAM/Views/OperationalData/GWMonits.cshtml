@model IEnumerable<SAM.ViewModels.OperationalData.GWMonitViewModel>
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Groundwater Monitoring";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var monitoringWells = ViewBag.MonitoringWells as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
    var selectedFacilityId = ViewBag.SelectedFacilityId as Guid?;
    var selectedMonitoringWellId = ViewBag.SelectedMonitoringWellId as Guid?;
    var user = await UserManager.GetUserAsync(User);
    var canEdit = user != null && (await UserManager.IsInRoleAsync(user, "admin") || await UserManager.IsInRoleAsync(user, "company_admin") || await UserManager.IsInRoleAsync(user, "technician"));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Manage groundwater monitoring data and records</p>
    </div>
    <div class="d-flex align-items-center gap-2">
        <div class="btn-group me-2" role="group" aria-label="View mode toggle">
            <button type="button"
                    class="btn btn-outline-secondary active"
                    id="gwmonitsTableViewBtn">
                <i class="bi bi-table"></i> Table
            </button>
            <button type="button"
                    class="btn btn-outline-secondary"
                    id="gwmonitsCardViewBtn">
                <i class="bi bi-grid-3x3-gap"></i> Cards
            </button>
        </div>
        @if (canEdit)
        {
            <a asp-action="GWMonitCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Record
            </a>
        }
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            @if (isGlobalAdmin)
            {
                <div class="col-md-3">
                    <label for="companyId" class="form-label"><i class="bi bi-building me-1"></i>Company:</label>
                    <input type="hidden" name="companyId" value="@selectedCompanyId" />
                    <input type="text" class="form-control" value="@selectedCompanyId" disabled />
                </div>
            }
            <div class="col-md-3">
                <label for="facilityId" class="form-label"><i class="bi bi-building me-1"></i>Facility:</label>
                <select name="facilityId" id="facilityId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Facilities</option>
                    @if (facilities != null)
                    {
                        @foreach (var facility in facilities)
                        {
                            <option value="@facility.Value" selected="@(selectedFacilityId.HasValue && selectedFacilityId.Value.ToString() == facility.Value)">
                                @facility.Text
                            </option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label for="monitoringWellId" class="form-label"><i class="bi bi-droplet-half me-1"></i>Monitoring Well:</label>
                <select name="monitoringWellId" id="monitoringWellId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Wells</option>
                    @if (monitoringWells != null)
                    {
                        @foreach (var well in monitoringWells)
                        {
                            <option value="@well.Value" selected="@(selectedMonitoringWellId.HasValue && selectedMonitoringWellId.Value.ToString() == well.Value)">
                                @well.Text
                            </option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Groundwater Monitoring List</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div id="gwmonitsTableView" class="table-responsive">
                <table class="table table-hover gwmonits-table">
                    <thead>
                        <tr>
                            <th> Sample Date</th>
                            <th> Facility</th>
                            <th> Well ID</th>
                            @* <th><i class="bi bi-rulers"></i> Sample Depth</th> *@
                            @* <th><i class="bi bi-water"></i> Water Level</th> *@
                            <th> pH</th>
                            @* <th><i class="bi bi-thermometer-half"></i> Temperature</th> *@
                            <th> Conductivity</th>
                            @if (isGlobalAdmin)
                            {
                                <th> Company</th>
                            }
                            <th class="table-actions"> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gwMonit in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="GWMonitDetails" asp-route-id="@gwMonit.Id">
                                        @gwMonit.SampleDate.ToString("MM/dd/yyyy")
                                    </a>
                                </td>
                                <td>@gwMonit.FacilityName</td>
                                <td>@gwMonit.MonitoringWellName</td>
                                @* <td>@(gwMonit.SampleDepth?.ToString("F2") ?? "N/A")</td> *@
                                @* <td>@(gwMonit.WaterLevel?.ToString("F2") ?? "N/A")</td> *@
                                <td>@(gwMonit.PH?.ToString("F2") ?? "N/A")</td>
                                @* <td>@(gwMonit.Temperature?.ToString("F1") ?? "N/A")</td> *@
                                <td>@(gwMonit.Conductivity?.ToString("F2") ?? "N/A")</td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@gwMonit.CompanyName</td>
                                }
                                <td class="table-actions">
                                    <a asp-action="GWMonitDetails" asp-route-id="@gwMonit.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (canEdit)
                                    {
                                        <a asp-action="GWMonitEdit" asp-route-id="@gwMonit.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(gwMonit.Id.ToString().Replace("-", ""))">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>

                                        <div class="modal fade" id="deleteModal@(gwMonit.Id.ToString().Replace("-", ""))" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this groundwater monitoring record?</p>
                                                        <p class="text-muted small">
                                                            Date: @gwMonit.SampleDate.ToString("MM/dd/yyyy")<br />
                                                            Facility: @gwMonit.FacilityName<br />
                                                            Well: @gwMonit.MonitoringWellName
                                                        </p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="GWMonitDelete" asp-route-id="@gwMonit.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="gwmonitsCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                @foreach (var gwMonit in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <div class="card-header-light d-flex justify-content-between align-items-start">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-0">
                                        <a asp-action="GWMonitDetails" asp-route-id="@gwMonit.Id">
                                            @gwMonit.SampleDate.ToString("MM/dd/yyyy")
                                        </a>
                                    </h6>
                                    <small class="text-muted d-block">
                                        <i class="bi bi-building me-1"></i>@gwMonit.FacilityName
                                    </small>
                                    <small class="text-muted d-block">
                                        <i class="bi bi-droplet-half me-1"></i>@gwMonit.MonitoringWellName
                                    </small>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">

                                <dl class="row small mb-3">
                                    <dt class="col-6"><i class="bi bi-rulers me-1"></i>Sample Depth</dt>
                                    <dd class="col-6 mb-1">@((gwMonit.SampleDepth?.ToString("F2") ?? "N/A"))</dd>

                                    <dt class="col-6"><i class="bi bi-water me-1"></i>Water Level</dt>
                                    <dd class="col-6 mb-1">@((gwMonit.WaterLevel?.ToString("F2") ?? "N/A"))</dd>

                                    <dt class="col-6"><i class="bi bi-thermometer me-1"></i>pH</dt>
                                    <dd class="col-6 mb-1">@((gwMonit.PH?.ToString("F2") ?? "N/A"))</dd>

                                    <dt class="col-6"><i class="bi bi-thermometer-half me-1"></i>Temp.</dt>
                                    <dd class="col-6 mb-1">@((gwMonit.Temperature?.ToString("F1") ?? "N/A"))</dd>

                                    <dt class="col-6"><i class="bi bi-lightning me-1"></i>Conductivity</dt>
                                    <dd class="col-6 mb-1">@((gwMonit.Conductivity?.ToString("F2") ?? "N/A"))</dd>

                                    @if (isGlobalAdmin)
                                    {
                                        <dt class="col-6"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                        <dd class="col-6 mb-1">@gwMonit.CompanyName</dd>
                                    }
                                </dl>

                                <div class="mt-auto d-flex justify-content-between">
                                    <a asp-action="GWMonitDetails" asp-route-id="@gwMonit.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (canEdit)
                                    {
                                        <div class="btn-group">
                                            <a asp-action="GWMonitEdit" asp-route-id="@gwMonit.Id" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(gwMonit.Id.ToString().Replace("-", ""))">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No groundwater monitoring records found.</p>
                @if (canEdit)
                {
                    <a asp-action="GWMonitCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create First Record
                    </a>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteModals = document.querySelectorAll('.modal[id^="deleteModal"]');
            deleteModals.forEach(modal => {
                modal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    if (!button) return;

                    const facilityName = button.getAttribute('data-facility-name');
                    const sampleDate = button.getAttribute('data-sample-date');
                    const wellName = button.getAttribute('data-well-name');

                    const modalBody = modal.querySelector('.modal-body p.text-muted.small');
                    if (modalBody && facilityName && sampleDate && wellName) {
                        modalBody.innerHTML = `Date: ${sampleDate}<br />Facility: ${facilityName}<br />Well: ${wellName}`;
                    }
                });
            });

            const tableBtn = document.getElementById('gwmonitsTableViewBtn');
            const cardBtn = document.getElementById('gwmonitsCardViewBtn');
            const tableView = document.getElementById('gwmonitsTableView');
            const cardView = document.getElementById('gwmonitsCardView');
            const storageKey = 'viewMode';

            function setViewMode(mode) {
                const isTable = mode === 'table';

                if (isTable) {
                    tableView?.classList.remove('d-none');
                    cardView?.classList.add('d-none');
                    tableBtn?.classList.add('active');
                    cardBtn?.classList.remove('active');
                } else {
                    tableView?.classList.add('d-none');
                    cardView?.classList.remove('d-none');
                    tableBtn?.classList.remove('active');
                    cardBtn?.classList.add('active');
                }

                if (window.localStorage) {
                    localStorage.setItem(storageKey, mode);
                }
            }

            const savedMode = window.localStorage ? localStorage.getItem(storageKey) : null;
            setViewMode(savedMode === 'card' ? 'card' : 'table');

            tableBtn?.addEventListener('click', function () {
                setViewMode('table');
            });

            cardBtn?.addEventListener('click', function () {
                setViewMode('card');
            });
        });
    </script>
}
