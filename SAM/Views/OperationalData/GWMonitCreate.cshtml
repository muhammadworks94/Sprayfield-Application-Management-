@model SAM.ViewModels.OperationalData.GWMonitCreateViewModel
@{
    ViewData["Title"] = "Create Groundwater Monitoring Record";
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var monitoringWells = ViewBag.MonitoringWells as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
}

<div class="mb-4">
    <p class="text-muted mb-0">Add a new groundwater monitoring record</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="GWMonitCreate" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-section">
                <div class="form-section-title">Basic Information</div>
                
                <input type="hidden" asp-for="CompanyId" />
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="FacilityId" class="form-label required"></label>
                            <select asp-for="FacilityId" asp-items="facilities" class="form-select" id="facilitySelect">
                                <option value="">-- Select Facility --</option>
                            </select>
                            <span asp-validation-for="FacilityId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="MonitoringWellId" class="form-label required"></label>
                            <select asp-for="MonitoringWellId" asp-items="monitoringWells" class="form-select">
                                <option value="">-- Select Monitoring Well --</option>
                            </select>
                            <span asp-validation-for="MonitoringWellId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="SampleDate" class="form-label required"></label>
                            <input asp-for="SampleDate" type="date" class="form-control" />
                            <span asp-validation-for="SampleDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Sample Information</div>
                
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="SampleDepth" class="form-label"></label>
                            <input asp-for="SampleDepth" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="SampleDepth" class="text-danger"></span>
                            <small class="form-text text-muted">feet</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="WaterLevel" class="form-label"></label>
                            <input asp-for="WaterLevel" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="WaterLevel" class="text-danger"></span>
                            <small class="form-text text-muted">feet</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="Temperature" class="form-label"></label>
                            <input asp-for="Temperature" type="number" step="0.1" class="form-control" />
                            <span asp-validation-for="Temperature" class="text-danger"></span>
                            <small class="form-text text-muted">°C</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="PH" class="form-label"></label>
                            <input asp-for="PH" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="PH" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Physical Parameters</div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Conductivity" class="form-label"></label>
                            <input asp-for="Conductivity" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Conductivity" class="text-danger"></span>
                            <small class="form-text text-muted">μS/cm</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="TDS" class="form-label"></label>
                            <input asp-for="TDS" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="TDS" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Turbidity" class="form-label"></label>
                            <input asp-for="Turbidity" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Turbidity" class="text-danger"></span>
                            <small class="form-text text-muted">NTU</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Chemical Parameters</div>
                
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="BOD5" class="form-label"></label>
                            <input asp-for="BOD5" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="BOD5" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="COD" class="form-label"></label>
                            <input asp-for="COD" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="COD" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="TSS" class="form-label"></label>
                            <input asp-for="TSS" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="TSS" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="NH3N" class="form-label"></label>
                            <input asp-for="NH3N" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="NH3N" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="NO3N" class="form-label"></label>
                            <input asp-for="NO3N" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="NO3N" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="TKN" class="form-label"></label>
                            <input asp-for="TKN" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="TKN" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="TotalPhosphorus" class="form-label"></label>
                            <input asp-for="TotalPhosphorus" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="TotalPhosphorus" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3">
                            <label asp-for="Chloride" class="form-label"></label>
                            <input asp-for="Chloride" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="Chloride" class="text-danger"></span>
                            <small class="form-text text-muted">mg/L</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Biological Parameters</div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="FecalColiform" class="form-label"></label>
                            <input asp-for="FecalColiform" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="FecalColiform" class="text-danger"></span>
                            <small class="form-text text-muted">CFU/100mL</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="TotalColiform" class="form-label"></label>
                            <input asp-for="TotalColiform" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="TotalColiform" class="text-danger"></span>
                            <small class="form-text text-muted">CFU/100mL</small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Lab Information</div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="LabCertification" class="form-label required"></label>
                            <input asp-for="LabCertification" class="form-control" />
                            <span asp-validation-for="LabCertification" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="CollectedBy" class="form-label required"></label>
                            <input asp-for="CollectedBy" class="form-control" />
                            <span asp-validation-for="CollectedBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="AnalyzedBy" class="form-label required"></label>
                            <input asp-for="AnalyzedBy" class="form-control" />
                            <span asp-validation-for="AnalyzedBy" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Additional Information</div>
                
                <div class="mb-3">
                    <label asp-for="Comments" class="form-label required"></label>
                    <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="GWMonits" asp-route-companyId="@Model.CompanyId" asp-route-facilityId="@Model.FacilityId" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Record
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Update monitoring wells when facility changes
        document.getElementById('facilitySelect')?.addEventListener('change', function() {
            var facilityId = this.value;
            if (facilityId) {
                // Reload page with new facility filter
                window.location.href = '@Url.Action("GWMonitCreate")' + '?companyId=@Model.CompanyId&facilityId=' + facilityId;
            }
        });
    </script>
}

