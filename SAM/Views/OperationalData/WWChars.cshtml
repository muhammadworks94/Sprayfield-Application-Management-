@model IEnumerable<SAM.ViewModels.OperationalData.WWCharViewModel>
@using Microsoft.AspNetCore.Identity
@using SAM.Domain.Entities
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Wastewater Characteristics";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
    var selectedFacilityId = ViewBag.SelectedFacilityId as Guid?;
    var user = await UserManager.GetUserAsync(User);
    var canEdit = user != null && (await UserManager.IsInRoleAsync(user, "admin") || await UserManager.IsInRoleAsync(user, "company_admin") || await UserManager.IsInRoleAsync(user, "technician"));
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Record and monitor wastewater characteristics</p>
    </div>
    @if (canEdit)
    {
        <a asp-action="WWCharCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Record
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            @if (isGlobalAdmin)
            {
                <div class="col-md-4">
                    <label for="companyId" class="form-label"><i class="bi bi-building me-1"></i>Company:</label>
                    <input type="hidden" name="companyId" value="@selectedCompanyId" />
                    <input type="text" class="form-control" value="@selectedCompanyId" disabled />
                </div>
            }
            <div class="col-md-4">
                <label for="facilityId" class="form-label"><i class="bi bi-building me-1"></i>Facility:</label>
                <select name="facilityId" id="facilityId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Facilities</option>
                    @if (facilities != null)
                    {
                        @foreach (var facility in facilities)
                        {
                            <option value="@facility.Value" selected="@(selectedFacilityId.HasValue && selectedFacilityId.Value.ToString() == facility.Value)">
                                @facility.Text
                            </option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Wastewater Characteristics List</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-building"></i> Facility</th>
                            <th><i class="bi bi-calendar-month"></i> Month</th>
                            <th><i class="bi bi-calendar"></i> Year</th>
                            <th><i class="bi bi-award"></i> Lab Certification</th>
                            <th><i class="bi bi-person"></i> Collected By</th>
                            <th><i class="bi bi-person-check"></i> Analyzed By</th>
                            @if (isGlobalAdmin)
                            {
                                <th><i class="bi bi-briefcase"></i> Company</th>
                            }
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var wwChar in Model)
                        {
                            <tr>
                                <td>@wwChar.FacilityName</td>
                                <td>@wwChar.Month</td>
                                <td>@wwChar.Year</td>
                                <td>@(string.IsNullOrEmpty(wwChar.LabCertification) ? "-" : wwChar.LabCertification)</td>
                                <td>@(string.IsNullOrEmpty(wwChar.CollectedBy) ? "-" : wwChar.CollectedBy)</td>
                                <td>@(string.IsNullOrEmpty(wwChar.AnalyzedBy) ? "-" : wwChar.AnalyzedBy)</td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@wwChar.CompanyName</td>
                                }
                                <td class="table-actions">
                                    <a asp-action="WWCharDetails" asp-route-id="@wwChar.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    @if (canEdit)
                                    {
                                        <a asp-action="WWCharEdit" asp-route-id="@wwChar.Id" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@wwChar.Id">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                        
                                        <div class="modal fade" id="deleteModal@wwChar.Id" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this wastewater characteristics record?</p>
                                                        <p class="text-muted small">Facility: @wwChar.FacilityName<br />
                                                        Period: @wwChar.Month @wwChar.Year</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="WWCharDelete" asp-route-id="@wwChar.Id" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No wastewater characteristics records found.</p>
                @if (canEdit)
                {
                    <a asp-action="WWCharCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Create First Record
                    </a>
                }
            </div>
        }
    </div>
</div>

