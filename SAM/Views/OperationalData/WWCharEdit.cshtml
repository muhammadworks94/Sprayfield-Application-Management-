@model SAM.ViewModels.OperationalData.WWCharEditViewModel
@using SAM.Domain.Enums
@{
    ViewData["Title"] = "Edit Wastewater Characteristics Record";
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var months = ViewBag.Months as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var orcOnSiteOptions = ViewBag.ORCOnSiteOptions as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
}

<div class="mb-4">
    <p class="text-muted mb-0">Modify wastewater characteristics record</p>
</div>

<div class="card">
    <div class="card-body">
        <button class="btn btn-link px-0 mb-3" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#wwcharEditInstructions"
                aria-expanded="false"
                aria-controls="wwcharEditInstructions">
            <i class="bi bi-journal-text me-1"></i> Editing wastewater characteristics instructions
        </button>

        <div class="collapse" id="wwcharEditInstructions">
            <div class="alert alert-info">
                <h6 class="fw-bold mb-3"><i class="bi bi-info-circle me-1"></i>Editing Wastewater Records</h6>
                <ul class="small mb-0 ps-3">
                    <li class="mb-1"><strong>Record context</strong>: This record represents one facility’s effluent data for a specific month and year. Verify you are editing the correct period.</li>
                    <li class="mb-1"><strong>Daily rows</strong>: Each row is a calendar day. Only revise values when you are correcting data entry errors or applying updated lab results.</li>
                    <li class="mb-1"><strong>Analytical data</strong>: For BOD5, TSS, nutrients, coliforms, chloride, and TDS, align edits with final lab reports. Do not “smooth” results to fit expectations.</li>
                    <li class="mb-1"><strong>Missing vs zero</strong>: Use blanks when no sample or measurement exists. Reserve zeros for true zero results as reported by the lab or meter.</li>
                    <li class="mb-1"><strong>Composite time & ORC on site</strong>: Ensure these fields still reflect actual sampling practices and staffing for each day.</li>
                    <li class="mb-1"><strong>Lagoon freeboard</strong>: Correct only if the original measurement was clearly wrong. These values support storage and freeboard compliance evaluations.</li>
                    <li><strong>Comments / facility notes</strong>: Document material corrections (e.g., “Updated BOD5 days 5–7 from final lab report dated …”) so audits and regulatory reviews can follow the history.</li>
                </ul>
            </div>
        </div>

        <form asp-action="WWCharEdit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CompanyId" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-section">
                <div class="form-section-title">Basic Information</div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="FacilityId" class="form-label required"></label>
                            <select asp-for="FacilityId" asp-items="facilities" class="form-select">
                                <option value="">-- Select Facility --</option>
                            </select>
                            <span asp-validation-for="FacilityId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Month" class="form-label required"></label>
                            <select asp-for="Month" asp-items="months" class="form-select">
                                <option value="">-- Select Month --</option>
                            </select>
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Year" class="form-label required"></label>
                            <input asp-for="Year" type="number" class="form-control" min="2000" max="2100" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Daily Data (Days 1-31)</div>
                <p class="text-muted small">Enter daily values for each parameter. Leave blank if no data available.</p>
                
                <div class="table-responsive">
                    <table class="table table-bordered wwchar-daily-table">
                        <thead>
                            <tr>
                                <th>Day</th>
                                <th>BOD5<br/>(mg/L)</th>
                                <th>TSS<br/>(mg/L)</th>
                                <th>Flow Rate<br/>(GPM)</th>
                                <th>pH</th>
                                <th>NH3-N<br/>(mg/L)</th>
                                <th>Fecal Coliform<br/>(CFU/100mL)</th>
                                <th>Total Coliform<br/>(CFU/100mL)</th>
                                <th>Chloride<br/>(mg/L)</th>
                                <th>TDS<br/>(mg/L)</th>
                                <th>Composite<br/>Time</th>
                                <th>ORC<br/>On Site</th>
                                <th>Lagoon<br/>Freeboard<br/>(inches)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 31; i++)
                            {
                                <tr>
                                    <td><strong>@(i + 1)</strong></td>
                                    <td>
                                        <input asp-for="BOD5Daily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="TSSDaily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="FlowRateDaily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="PHDaily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="NH3NDaily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="FecalColiformDaily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="TotalColiformDaily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="ChlorideDaily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="TDSDaily[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input asp-for="CompositeTime[i]" type="time" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <select asp-for="ORCOnSite[i]" asp-items="orcOnSiteOptions" class="form-select form-select-sm">
                                            <option value="">-</option>
                                        </select>
                                    </td>
                                    <td>
                                        <input asp-for="LagoonFreeboard[i]" type="number" step="0.01" class="form-control form-control-sm" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title">Lab Information</div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="LabCertification" class="form-label"></label>
                            <input asp-for="LabCertification" class="form-control" />
                            <span asp-validation-for="LabCertification" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="CollectedBy" class="form-label"></label>
                            <input asp-for="CollectedBy" class="form-control" />
                            <span asp-validation-for="CollectedBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="AnalyzedBy" class="form-label"></label>
                            <input asp-for="AnalyzedBy" class="form-control" />
                            <span asp-validation-for="AnalyzedBy" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="WWCharDetails" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update Record
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

