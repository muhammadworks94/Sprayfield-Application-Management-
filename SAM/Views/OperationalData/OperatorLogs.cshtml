@model IEnumerable<SAM.ViewModels.OperationalData.OperatorLogViewModel>
@{
    ViewData["Title"] = "Operator Logs";
    var isGlobalAdmin = ViewBag.IsGlobalAdmin as bool? ?? false;
    var facilities = ViewBag.Facilities as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var selectedCompanyId = ViewBag.SelectedCompanyId as Guid?;
    var selectedFacilityId = ViewBag.SelectedFacilityId as Guid?;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">View and manage operator log entries for facilities</p>
    </div>
    
</div>


<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label for="facilityId" class="form-label"><i class="bi bi-building me-1"></i>Facility:</label>
                <select name="facilityId" id="facilityId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Facilities</option>
                    @if (facilities != null)
                    {
                        @foreach (var facility in facilities)
                        {
                            <option value="@facility.Value" selected="@(selectedFacilityId.HasValue && selectedFacilityId.Value.ToString() == facility.Value)">
                                @facility.Text
                            </option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h4 class="mb-0"> Operator Logs</h4>
            <div class="d-flex">
                <div class="btn-group me-2" role="group" aria-label="View mode toggle">
                        <button type="button"
                                class="btn btn-sm btn-outline-secondary active"
                                id="operatorLogsTableViewBtn">
                            <i class="bi bi-table"></i> Table
                        </button>
                        <button type="button"
                                class="btn btn-sm btn-outline-secondary"
                                id="operatorLogsCardViewBtn">
                            <i class="bi bi-grid-3x3-gap"></i> Cards
                        </button>
                </div>
                    <a asp-action="OperatorLogCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Add Log
                    </a>
            </div>
        </div>
        @if (Model.Any())
        {
            <div id="operatorLogsTableView" class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th><i class="bi bi-calendar"></i> Log Date</th>
                            <th><i class="bi bi-person"></i> Operator</th>
                            <th><i class="bi bi-clock"></i> Arrival Time</th>
                            <th><i class="bi bi-hourglass"></i> Time on Site (hours)</th>
                            <th><i class="bi bi-building"></i> Facility</th>
                            @if (isGlobalAdmin)
                            {
                                <th><i class="bi bi-briefcase"></i> Company</th>
                            }
                            <th class="table-actions"><i class="bi bi-gear"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="OperatorLogDetails" asp-route-id="@log.Id">@log.LogDate.ToString("MM/dd/yyyy")</a>
                                </td>
                                <td>@log.OperatorName</td>
                                <td>@log.ArrivalTime</td>
                                <td>@(log.TimeOnSiteHours.HasValue ? log.TimeOnSiteHours.Value.ToString("F2") : "N/A")</td>
                                <td>@log.FacilityName</td>
                                @if (isGlobalAdmin)
                                {
                                    <td>@log.CompanyName</td>
                                }
                                <td class="table-actions">
                                    <a asp-action="OperatorLogEdit" asp-route-id="@log.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(log.Id.ToString().Replace("-", ""))">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>

                                    <div class="modal fade" id="deleteModal@(log.Id.ToString().Replace("-", ""))" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete this operator log?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="OperatorLogDelete" asp-route-id="@log.Id" method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div id="operatorLogsCardView" class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-3 d-none">
                @foreach (var log in Model)
                {
                    <div class="col">
                            <div class="card h-100 shadow-sm">
                            <div class="card-header-light d-flex justify-content-between align-items-start">
                                <h6 class="mb-0">
                                    <a asp-action="OperatorLogDetails" asp-route-id="@log.Id">
                                        @log.LogDate.ToString("MM/dd/yyyy")
                                    </a>
                                </h6>
                            </div>
                            <div class="card-body d-flex flex-column">

                                <dl class="row small mb-3">
                                    <dt class="col-5"><i class="bi bi-person me-1"></i>Operator</dt>
                                    <dd class="col-7 mb-1">@log.OperatorName</dd>

                                    <dt class="col-5"><i class="bi bi-building me-1"></i>Facility</dt>
                                    <dd class="col-7 mb-1">@log.FacilityName</dd>
                                    
                                    <dt class="col-5"><i class="bi bi-clock me-1"></i>Arrival</dt>
                                    <dd class="col-7 mb-1">@log.ArrivalTime</dd>

                                    <dt class="col-5"><i class="bi bi-hourglass me-1"></i>Time on Site</dt>
                                    <dd class="col-7 mb-1">@(log.TimeOnSiteHours.HasValue ? log.TimeOnSiteHours.Value.ToString("F2") : "N/A")</dd>

                                    @if (isGlobalAdmin)
                                    {
                                        <dt class="col-5"><i class="bi bi-briefcase me-1"></i>Company</dt>
                                        <dd class="col-7 mb-1">@log.CompanyName</dd>
                                    }
                                </dl>

                                <div class="mt-auto d-flex justify-content-between">
                                    <a asp-action="OperatorLogEdit" asp-route-id="@log.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(log.Id.ToString().Replace("-", ""))">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 3rem; color: var(--gray-400);"></i>
                <p class="text-muted mt-3">No operator logs found.</p>
                <a asp-action="OperatorLogCreate" asp-route-companyId="@selectedCompanyId" asp-route-facilityId="@selectedFacilityId" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create First Log
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const tableBtn = document.getElementById('operatorLogsTableViewBtn');
            const cardBtn = document.getElementById('operatorLogsCardViewBtn');
            const tableView = document.getElementById('operatorLogsTableView');
            const cardView = document.getElementById('operatorLogsCardView');
            const storageKey = 'operatorLogsViewMode';

            function setViewMode(mode) {
                const isTable = mode === 'table';

                if (isTable) {
                    tableView?.classList.remove('d-none');
                    cardView?.classList.add('d-none');
                    tableBtn?.classList.add('active');
                    cardBtn?.classList.remove('active');
                } else {
                    tableView?.classList.add('d-none');
                    cardView?.classList.remove('d-none');
                    tableBtn?.classList.remove('active');
                    cardBtn?.classList.add('active');
                }

                if (window.localStorage) {
                    localStorage.setItem(storageKey, mode);
                }
            }

            const savedMode = window.localStorage ? localStorage.getItem(storageKey) : null;
            setViewMode(savedMode === 'card' ? 'card' : 'table');

            tableBtn?.addEventListener('click', function () {
                setViewMode('table');
            });

            cardBtn?.addEventListener('click', function () {
                setViewMode('card');
            });
        })();
    </script>
}