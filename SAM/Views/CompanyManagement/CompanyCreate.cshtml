@model SAM.ViewModels.SystemAdmin.CompanyCreateViewModel
@{
    ViewData["Title"] = "Create Company";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <p class="text-muted mb-0">Add a new company to the system</p>
    </div>
    <a asp-controller="CompanyManagement" asp-action="Index" asp-route-tab="companies" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Company Information</h5>
    </div>
    <div class="card-body">
        <form asp-action="CompanyCreate" method="post">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-section">
                <div class="form-section-title text-primary"><i class="bi bi-building me-2"></i>Company Details</div>
                
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Name" class="form-label required"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title text-primary"><i class="bi bi-telephone me-2"></i>Contact Information</div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ContactEmail" class="form-label required"></label>
                        <input asp-for="ContactEmail" type="email" class="form-control" />
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label required"></label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="FaxNumber" class="form-label"></label>
                        <input asp-for="FaxNumber" type="tel" class="form-control" />
                        <span asp-validation-for="FaxNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Website" class="form-label"></label>
                        <input asp-for="Website" type="url" class="form-control" placeholder="https://www.example.com" />
                        <span asp-validation-for="Website" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title text-primary"><i class="bi bi-file-earmark-text me-2"></i>Business Information</div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="TaxId" class="form-label"></label>
                        <input asp-for="TaxId" class="form-control" />
                        <span asp-validation-for="TaxId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LicenseNumber" class="form-label"></label>
                        <input asp-for="LicenseNumber" class="form-control" />
                        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-section">
                <div class="form-section-title text-primary"><i class="bi bi-toggle-on me-2"></i>Status</div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check form-switch">
                            <input asp-for="IsVerified" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsVerified" class="form-check-label"></label>
                        </div>
                        <span asp-validation-for="IsVerified" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-controller="CompanyManagement" asp-action="Index" asp-route-tab="companies" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Create Company
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

